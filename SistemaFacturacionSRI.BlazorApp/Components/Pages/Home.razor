@page "/home"
@inject NavigationManager NavigationManager

<PageTitle>Home - Sistema de Facturación</PageTitle>

<style>
    /* ------------------------------------------- */
    /* ESTILOS DE PÁGINA DE INICIO / DASHBOARD */
    /* ------------------------------------------- */
    .home-container {
        max-width: 1200px;
        margin: 40px auto;
        padding: 0 48px;
    }

    /* --- ENCABEZADO / HERO (Adaptado al estilo Dashboard claro) --- */
    .welcome-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        background-color: #f7faff; /* Fondo azul muy claro para diferenciarlo */
        color: #1a1a1a;
        padding: 30px 40px;
        border-radius: 16px;
        margin-bottom: 30px;
        border: 1px solid #e0e7ff;
        box-shadow: 0 4px 15px rgba(0, 85, 255, 0.05);
    }

        .welcome-header .title {
            font-size: 2rem; /* 32px */
            font-weight: 700;
            color: #0058ff; /* Título principal en azul */
            margin-bottom: 0.5rem;
        }

        .welcome-header .subtitle {
            font-size: 1.1rem;
            color: #4b5563; /* Gris oscuro para el subtítulo */
            opacity: 0.95;
            margin-bottom: 0;
        }

    .welcome-icon {
        font-size: 4rem;
        color: #0058ff;
        opacity: 0.8;
        margin-left: 2rem;
    }
    /* --- FIN DE ESTILOS DEL HERO --- */


    /* --- GRID DE ACCESO RÁPIDO (Tarjetas) --- */
    .quick-access-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 20px;
    }

    .access-card {
        background-color: #ffffff;
        border-radius: 16px;
        padding: 30px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
        transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
        cursor: pointer;
        border: 1px solid #e5e7eb;
    }

        .access-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
            border-color: #c7d2fe;
        }

    .card-icon {
        font-size: 2.5rem;
        color: #0058ff; /* Icono en azul */
        margin-bottom: 1rem;
        display: block;
        background-color: #e6f0ff; /* Fondo sutil para el ícono */
        padding: 10px;
        border-radius: 8px;
        width: 4.5rem;
        height: 4.5rem;
        text-align: center;
    }

    .card-title {
        font-size: 1.3rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
        color: #1a1a1a;
    }

    .card-description {
        font-size: 0.95rem;
        color: #6b7280;
        line-height: 1.4;
    }

    /* ESTADO DESHABILITADO */
    .access-card.disabled {
        background-color: #f8fafc;
        cursor: not-allowed;
        opacity: 0.8;
    }

        .access-card.disabled:hover {
            transform: none;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
            border-color: #e5e7eb;
        }

        .access-card.disabled .card-icon {
            color: #9ca3af;
            background-color: #f3f4f6;
        }

        .access-card.disabled .card-title,
        .access-card.disabled .card-description {
            color: #9ca3af;
        }

    /* Responsividad */
    @@media (max-width: 768px) {
        .home-container {
            padding: 0 20px;
        }

        .welcome-header {
            flex-direction: column;
            text-align: center;
        }

        .welcome-icon {
            margin: 1.5rem 0 0 0;
        }
    }

</style>

<div class="home-container">

    <!-- Título y bienvenida (Rediseñado para ser un encabezado de Dashboard) -->
    <div class="welcome-header">
        <div class="welcome-text">
            <h1 class="title">Bienvenido al Sistema de Facturación</h1>
            <p class="subtitle">Gestione sus clientes, productos y genere facturas electrónicas de forma eficiente.</p>
        </div>
        <!-- Icono grande para dar énfasis visual -->
        <span class="oi oi-spreadsheet welcome-icon" aria-hidden="true"></span>
    </div>

    <!-- Contenedor de tarjetas de acceso rápido -->
    <div class="quick-access-grid">

        <!-- Tarjeta de Clientes -->
        <div class="access-card" @onclick='() => NavigateTo("/clientes")'>
            <span class="oi oi-people card-icon" aria-hidden="true"></span>
            <h3 class="card-title">Gestión de Clientes</h3>
            <p class="card-description">Administre su cartera de clientes. Cree, edite y consulte información.</p>
        </div>

        <!-- Tarjeta de Productos -->
        <div class="access-card" @onclick='() => NavigateTo("/productos")'>
            <span class="oi oi-box card-icon" aria-hidden="true"></span>
            <h3 class="card-title">Gestión de Productos</h3>
            <p class="card-description">Configure sus productos y servicios listos para la facturación.</p>
        </div>

        <!-- Tarjeta de Facturación (Deshabilitada por ahora, para Sprint 2) -->
        <div classs="access-card disabled">
            <span class="oi oi-document card-icon" aria-hidden="true"></span>
            <h3 class="card-title">Nueva Factura</h3>
            <p class="card-description">(Próximamente en Sprint 2) Emita nuevos comprobantes electrónicos.</p>
        </div>

    </div>
</div>

@code {
    // Función para navegar al hacer clic en las tarjetas
    private void NavigateTo(string url)
    {
        NavigationManager.NavigateTo(url);
    }
}