@page "/login"
@using SistemaFacturacionSRI.Domain.Entities
@using SistemaFacturacionSRI.BlazorApp.Auth
@using System.ComponentModel.DataAnnotations
@inject HttpClient Http
@inject SimpleAuthStateProvider AuthStateProvider
@inject NavigationManager NavManager

<style>
    /* ------------------------------------------------------------------ */
    /* ESTILOS BLANCO/AZUL-GRISÁCEO PREMIUM (GLASSMORPHISM V2) */
    /* ------------------------------------------------------------------ */

    /* 1. Paleta de Colores y Fondo Degradado Profesional */
    :root {
        --color-bg-start: #0F172A; /* Slate 900 */
        --color-bg-mid: #1E293B; /* Slate 800 */
        --color-bg-end: #334155; /* Slate 700 */
        --color-primary-start: #3B82F6; /* Blue 500 */
        --color-primary-end: #6366F1; /* Indigo 500 */
        --color-white: #FFFFFF;
        --color-text-soft: rgba(255, 255, 255, 0.9);
        --color-text-placeholder: rgba(255, 255, 255, 0.5);
        --color-border-glow: rgba(255, 255, 255, 0.25);
        --blur-amount: 25px; /* Aumento a 20-30px */
        --card-bg-opacity: 0.08; /* Más transparencia */
        --border-radius-lg: 16px;
    }

    /* Carga de fuente Inter (Asumiendo que se hace en index.html/host.cshtml) */
    body {
        font-family: 'Inter', sans-serif;
    }

    /* Contenedor principal con Degradado Suave */
    .login-wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        /* Nuevo degradado: Azul-Grisáceo profesional */
        background: linear-gradient(135deg, var(--color-bg-start) 0%, var(--color-bg-mid) 50%, var(--color-bg-end) 100%);
        padding: 20px;
    }

    /* 2. Tarjeta Glassmorphism Mejorada */
    .login-glass-card {
        width: 100%;
        max-width: 380px;
        padding: 40px; /* Más espacio interno */
        text-align: center;
        border-radius: var(--border-radius-lg);
        color: var(--color-text-soft);
        /* Glassmorphism V2 */
        backdrop-filter: blur(var(--blur-amount));
        background-color: rgba(255, 255, 255, var(--card-bg-opacity));
        border: 1px solid var(--color-border-glow); /* Borde con brillo suave */
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.4);
        transition: all 0.3s ease;
    }

        .login-glass-card:hover {
            transform: translateY(-4px) scale(1.01);
            box-shadow: 0 15px 50px rgba(0, 0, 0, 0.5);
        }

        .login-glass-card h3 {
            color: var(--color-text-soft);
            font-weight: 600; /* Semibold */
            font-size: 1.8rem;
            margin-top: 0;
        }

    /* 3. Estilo del Avatar Mejorado */
    .avatar-icon-container {
        width: 90px;
        height: 90px;
        /* Más translúcido que el anterior, menos llamativo */
        background-color: rgba(255, 255, 255, 0.05);
        border-radius: 50%;
        margin: 0 auto 35px;
        display: flex;
        justify-content: center;
        align-items: center;
        border: 2px solid rgba(255, 255, 255, 0.1);
    }

    /* 4. Inputs (Campo de Entrada) y Iconos */
    .glass-input-group {
        position: relative;
        margin-bottom: 30px; /* Más separación entre campos */
        text-align: left;
    }

        /* Estilo del icono SVG (User/Key) */
        .glass-input-group .input-icon {
            position: absolute;
            top: 10px;
            left: 0;
            color: rgba(255, 255, 255, 0.7); /* Blanco suave */
            width: 20px;
            height: 20px;
        }

    .glass-input-control {
        width: 100%;
        padding: 10px 0 10px 30px; /* Aumento ligero en padding vertical y para el ícono */
        background: transparent;
        border: none;
        /* Línea inferior más fina y elegante */
        border-bottom: 1.5px solid rgba(255, 255, 255, 0.3);
        color: var(--color-text-soft);
        font-size: 1em;
        outline: none;
        transition: border-bottom-color 0.3s;
        border-radius: 0;
    }

        .glass-input-control::placeholder {
            color: var(--color-text-placeholder); /* Placeholder más suave */
        }

        .glass-input-control:focus {
            border-bottom: 1.5px solid var(--color-white); /* Línea blanca pura al enfocar */
        }

    .validation-message {
        color: #F87171; /* Rojo suave para errores (Red 400) */
        font-size: 0.85em;
        margin-top: 5px;
        display: block;
        font-weight: 400; /* Regular */
    }

    /* 5. Checkbox y Enlaces Secundarios */
    .options-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 15px;
        font-size: 0.9em;
        color: var(--color-text-placeholder); /* Texto secundario más suave */
    }

    /* Checkbox más moderno */
    #rememberMe {
        appearance: none;
        -webkit-appearance: none;
        width: 16px;
        height: 16px;
        border: 2px solid var(--color-text-placeholder);
        border-radius: 3px;
        margin-right: 8px;
        cursor: pointer;
        background-color: transparent;
        transition: all 0.2s;
        position: relative;
        top: 1px;
    }

        #rememberMe:checked {
            background-color: var(--color-primary-start);
            border-color: var(--color-primary-start);
        }

    .options-row a {
        color: var(--color-text-placeholder);
        text-decoration: none;
        transition: color 0.2s;
    }

        .options-row a:hover {
            color: var(--color-text-soft);
            text-decoration: underline;
        }

    /* 6. Botón de LOGIN Profesional */
    .btn-glass-login {
        width: 100%;
        padding: 14px; /* Un poco más de altura */
        margin-top: 40px;
        font-size: 1.05em;
        font-weight: 600;
        border: none;
        border-radius: 10px;
        color: var(--color-white);
        cursor: pointer;
        /* Nuevo degradado profesional: Blue/Indigo */
        background: linear-gradient(90deg, var(--color-primary-start) 0%, var(--color-primary-end) 100%);
        box-shadow: 0 8px 20px rgba(60, 130, 246, 0.4); /* Sombra basada en el color azul */
        transition: background-color 0.3s, transform 0.2s, box-shadow 0.3s;
    }

        .btn-glass-login:hover {
            transform: translateY(-1px);
            opacity: 0.95;
        }

    /* 7. Mensajes de Error */
    .alert-glass-danger {
        background-color: rgba(252, 165, 165, 0.1); /* Red 300 con opacidad */
        color: #F87171; /* Red 400 */
        border: 1px solid rgba(248, 113, 113, 0.2);
        border-radius: 8px;
        padding: 10px;
        margin-top: 25px;
        font-size: 0.9em;
        font-weight: 500;
    }

</style>

<div class="login-wrapper">
    <div class="login-glass-card">

        <!-- Icono de Avatar SVG (Profesional) -->
        <div class="avatar-icon-container">
            <!-- Icono SVG de Usuario (Lucide/HeroIcons style) -->
            <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" style="color: rgba(255, 255, 255, 0.7);">
                <path d="M19 21v-2a4 4 0 0 0-4-4H9a4 4 0 0 0-4 4v2"></path>
                <circle cx="12" cy="7" r="4"></circle>
            </svg>
        </div>

        <h3 style="font-weight: 600; margin-bottom: 30px;">Iniciar Sesión</h3>

        <EditForm Model="@usuario" OnValidSubmit="HandleLogin">
            <DataAnnotationsValidator />

            <!-- Campo Usuario -->
            <div class="glass-input-group">
                <!-- Icono de Usuario SVG -->
                <svg class="input-icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M19 21v-2a4 4 0 0 0-4-4H9a4 4 0 0 0-4 4v2"></path>
                    <circle cx="12" cy="7" r="4"></circle>
                </svg>
                <InputText class="glass-input-control" @bind-Value="usuario.NombreUsuario" placeholder="Usuario o Correo Electrónico" />
                <ValidationMessage For="@(() => usuario.NombreUsuario)" />
            </div>

            <!-- Campo Contraseña -->
            <div class="glass-input-group">
                <!-- Icono de Candado SVG -->
                <svg class="input-icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
                    <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
                </svg>
                <InputText type="password" class="glass-input-control" @bind-Value="usuario.Password" placeholder="Contraseña" />
                <ValidationMessage For="@(() => usuario.Password)" />
            </div>


            <div class="d-grid gap-2">
                <button type="submit" class="btn-glass-login">
                    INGRESAR
                </button>
            </div>

            @if (!string.IsNullOrEmpty(mensajeError))
            {
                <div class="alert-glass-danger text-center">@mensajeError</div>
            }
        </EditForm>
    </div>
</div>

@code {
    /* * -----------------------------------------------------------
     * LÓGICA C# DE BLASOR (Se mantiene intacta)
     * -----------------------------------------------------------
     */
    private Usuario usuario = new Usuario();
    private string mensajeError = "";

    private async Task HandleLogin()
    {
        try
        {
            // Consultamos a tu API
            var response = await Http.PostAsJsonAsync("api/auth/login", usuario);

            if (response.IsSuccessStatusCode)
            {
                var usuarioAutenticado = await response.Content.ReadFromJsonAsync<Usuario>();
                //guardar usuario en memoria
                AuthStateProvider.IniciarSesion(usuarioAutenticado!);

                NavManager.NavigateTo("/");
            }
            else
            {
                var errorDelServidor = await response.Content.ReadAsStringAsync();

                mensajeError = string.IsNullOrEmpty(errorDelServidor)
                                     ? "No se pudo iniciar sesión."
                                     : errorDelServidor.Trim('"');
            }
        }
        catch (Exception ex)
        {
            mensajeError = "Error de conexión con el servidor.";
        }
    }
}