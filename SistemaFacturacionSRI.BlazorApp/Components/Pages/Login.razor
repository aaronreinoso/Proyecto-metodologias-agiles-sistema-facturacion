@page "/login"
@using Microsoft.AspNetCore.Components.Authorization
@using SistemaFacturacionSRI.Domain.Entities
@using SistemaFacturacionSRI.BlazorApp.Auth
@using Blazored.LocalStorage
@using System.ComponentModel.DataAnnotations
@inject HttpClient Http
@inject ILocalStorageService LocalStorage
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager NavManager

<style>
    /* ------------------------------------------------------------------ */
    /* ESTILOS BLANCO/AZUL-GRISÁCEO PREMIUM (GLASSMORPHISM V2) */
    /* ------------------------------------------------------------------ */

    :root {
        --color-bg-start: #0F172A;
        --color-bg-mid: #1E293B;
        --color-bg-end: #334155;
        --color-primary-start: #3B82F6;
        --color-primary-end: #6366F1;
        --color-white: #FFFFFF;
        --color-text-soft: rgba(255, 255, 255, 0.9);
        --color-text-placeholder: rgba(255, 255, 255, 0.5);
        --color-border-glow: rgba(255, 255, 255, 0.25);
        --blur-amount: 25px;
        --card-bg-opacity: 0.08;
        --border-radius-lg: 16px;
    }

    body {
        font-family: 'Inter', sans-serif;
    }

    .login-wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        background: linear-gradient(135deg, var(--color-bg-start) 0%, var(--color-bg-mid) 50%, var(--color-bg-end) 100%);
        padding: 20px;
    }

    .login-glass-card {
        width: 100%;
        max-width: 380px;
        padding: 40px;
        text-align: center;
        border-radius: var(--border-radius-lg);
        color: var(--color-text-soft);
        backdrop-filter: blur(var(--blur-amount));
        background-color: rgba(255, 255, 255, var(--card-bg-opacity));
        border: 1px solid var(--color-border-glow);
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.4);
        transition: all 0.3s ease;
    }

        .login-glass-card:hover {
            transform: translateY(-4px) scale(1.01);
            box-shadow: 0 15px 50px rgba(0, 0, 0, 0.5);
        }

        .login-glass-card h3 {
            color: var(--color-text-soft);
            font-weight: 600;
            font-size: 1.8rem;
            margin-top: 0;
        }

    .avatar-icon-container {
        width: 90px;
        height: 90px;
        background-color: rgba(255, 255, 255, 0.05);
        border-radius: 50%;
        margin: 0 auto 35px;
        display: flex;
        justify-content: center;
        align-items: center;
        border: 2px solid rgba(255, 255, 255, 0.1);
    }

    .glass-input-group {
        position: relative;
        margin-bottom: 30px;
        text-align: left;
    }

        .glass-input-group .input-icon {
            position: absolute;
            top: 10px;
            left: 0;
            width: 20px;
            height: 20px;
            color: rgba(255, 255, 255, 0.7);
        }

    .glass-input-control {
        width: 100%;
        padding: 10px 0 10px 30px;
        background: transparent;
        border: none;
        border-bottom: 1.5px solid rgba(255, 255, 255, 0.3);
        color: var(--color-text-soft);
        font-size: 1em;
        outline: none;
        border-radius: 0;
    }

        .glass-input-control::placeholder {
            color: var(--color-text-placeholder);
        }

        .glass-input-control:focus {
            border-bottom: 1.5px solid var(--color-white);
        }

    .alert-glass-danger {
        background-color: rgba(252, 165, 165, 0.1);
        color: #F87171;
        border: 1px solid rgba(248, 113, 113, 0.2);
        border-radius: 8px;
        padding: 10px;
        margin-top: 25px;
        font-size: 0.9em;
        font-weight: 500;
    }

    .btn-glass-login {
        width: 100%;
        padding: 14px;
        margin-top: 40px;
        font-size: 1.05em;
        font-weight: 600;
        border: none;
        border-radius: 10px;
        color: white;
        cursor: pointer;
        background: linear-gradient(90deg, var(--color-primary-start), var(--color-primary-end));
        box-shadow: 0 8px 20px rgba(60, 130, 246, 0.4);
        transition: transform 0.2s, opacity 0.3s;
    }

        .btn-glass-login:hover {
            transform: translateY(-1px);
            opacity: 0.95;
        }

</style>

<div class="login-wrapper">
    <div class="login-glass-card">

        <div class="avatar-icon-container">
            <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="none" stroke="currentColor" stroke-width="1.5">
                <path d="M19 21v-2a4 4 0 0 0-4-4H9a4 4 0 0 0-4 4v2" />
                <circle cx="12" cy="7" r="4" />
            </svg>
        </div>

        <h3>Iniciar Sesión</h3>

        <EditForm Model="@usuario" OnValidSubmit="HandleLogin">
            <DataAnnotationsValidator />

            <!-- Usuario -->
            <div class="glass-input-group">
                <svg class="input-icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24">
                    <path d="M19 21v-2a4 4 0 0 0-4-4H9a4 4 0 0 0-4 4v2"></path>
                    <circle cx="12" cy="7" r="4"></circle>
                </svg>

                <InputText @bind-Value="usuario.NombreUsuario" class="glass-input-control" placeholder="Usuario" />
            </div>

            <!-- Contraseña -->
            <div class="glass-input-group">
                <svg class="input-icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24">
                    <rect x="3" y="11" width="18" height="11" rx="2"></rect>
                    <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
                </svg>

                <InputText @bind-Value="usuario.Password" type="password" class="glass-input-control" placeholder="Contraseña" />
            </div>

            <button type="submit" class="btn-glass-login">INGRESAR</button>

            @if (!string.IsNullOrEmpty(mensajeError))
            {
                <div class="alert-glass-danger text-center">@mensajeError</div>
            }
        </EditForm>

    </div>
</div>

@code {

    private Usuario usuario = new Usuario();
    private string mensajeError = string.Empty;

    private class LoginResponse
    {
        public string Token { get; set; } = "";
        public string Usuario { get; set; } = "";
        public string Rol { get; set; } = "";
    }

    private async Task HandleLogin()
    {
        try
        {
            var response = await Http.PostAsJsonAsync("api/auth/login", usuario);

            if (response.IsSuccessStatusCode)
            {
                var result = await response.Content.ReadFromJsonAsync<LoginResponse>();

                // Guardar token
                await LocalStorage.SetItemAsync("authToken", result!.Token);

                // Notificar al sistema de autenticación
                await AuthStateProvider.GetAuthenticationStateAsync();

                NavManager.NavigateTo("/");
            }
            else
            {
                mensajeError = "Credenciales incorrectas o usuario inactivo.";
            }
        }
        catch
        {
            mensajeError = "Error al conectar con el servidor.";
        }
    }
}
