@page "/configuracion"
@using Microsoft.AspNetCore.Components.Authorization
@using System.Net.Http.Headers
@using SistemaFacturacionSRI.Domain.Entities
@using SistemaFacturacionSRI.Domain.DTOs.Configuracion
@inject HttpClient Http
@inject IJSRuntime JS

<AuthorizeView Roles="Administrador">
    <Authorized>
        <div class="container">
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h4 class="mb-0 text-primary">🛡️ Configuración de Facturación SRI</h4>
                </div>

                <div class="card-body">
                    <p class="text-muted mb-4">Configure los datos de su empresa y su firma electrónica para la emisión de comprobantes.</p>

                    <EditForm Model="@modelo" OnValidSubmit="GuardarTodo" Context="formContext">
                        <DataAnnotationsValidator />

                        <div class="row">
                            <div class="col-md-6 border-end pe-4">
                                <h5 class="text-secondary mb-3">🏢 Datos del Emisor</h5>

                                <div class="mb-3">
                                    <label class="form-label fw-bold">RUC</label>
                                    <InputText @bind-Value="modelo.Ruc" class="form-control" placeholder="Ej: 1722..." />
                                    <ValidationMessage For="@(() => modelo.Ruc)" />
                                </div>

                                <div class="mb-3">
                                    <label class="form-label fw-bold">Razón Social</label>
                                    <InputText @bind-Value="modelo.RazonSocial" class="form-control" />
                                    <ValidationMessage For="@(() => modelo.RazonSocial)" />
                                </div>

                                <div class="mb-3">
                                    <label class="form-label fw-bold">Nombre Comercial</label>
                                    <InputText @bind-Value="modelo.NombreComercial" class="form-control" />
                                </div>

                                <div class="mb-3">
                                    <label class="form-label fw-bold">Dirección Matriz</label>
                                    <InputText @bind-Value="modelo.DireccionMatriz" class="form-control" />
                                    <ValidationMessage For="@(() => modelo.DireccionMatriz)" />
                                </div>

                                <div class="row">
                                    <div class="col-6 mb-3">
                                        <label class="form-label fw-bold">Estab.</label>
                                        <InputText @bind-Value="modelo.CodigoEstablecimiento" class="form-control" placeholder="001" />
                                    </div>
                                    <div class="col-6 mb-3">
                                        <label class="form-label fw-bold">Pto. Emisión</label>
                                        <InputText @bind-Value="modelo.CodigoPuntoEmision" class="form-control" placeholder="001" />
                                    </div>
                                </div>

                                <div class="form-check mb-3">
                                    <InputCheckbox @bind-Value="modelo.ObligadoContabilidad" class="form-check-input" id="chkObligado" />
                                    <label class="form-check-label" for="chkObligado">Obligado a llevar contabilidad</label>
                                </div>
                            </div>

                            <div class="col-md-6 ps-4">
                                <h5 class="text-secondary mb-3">🔐 Firma Electrónica</h5>

                                <div class="mb-4 p-4 border rounded text-center bg-light" style="border-style: dashed !important;">
                                    <label class="form-label fw-bold text-secondary">Archivo de Firma (.p12)</label>
                                    <div class="mt-2">
                                        <InputFile OnChange="CargarArchivo" class="form-control w-75 mx-auto" accept=".p12" />
                                    </div>
                                    <small class="d-block mt-2 text-muted">
                                        @(string.IsNullOrEmpty(nombreArchivoLocal)
                                                                                ? "Seleccione un archivo solo si desea actualizar la firma actual."
                                                                                : $"📎 Archivo seleccionado: {nombreArchivoLocal}")
                                    </small>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label fw-bold">Contraseña de la Firma</label>
                                    <InputText @bind-Value="modelo.ClaveFirma" type="password" class="form-control" placeholder="Ingrese solo si sube un nuevo archivo" />
                                </div>

                                @if (configGuardada != null && !string.IsNullOrEmpty(configGuardada.NombreArchivo))
                                {
                                    <div class="alert alert-info py-2 d-flex align-items-center">
                                        <span class="me-2">✅</span>
                                        <div>
                                            <small class="d-block fw-bold">Firma actual cargada:</small>
                                            <small>@configGuardada.NombreArchivo (@configGuardada.FechaSubida)</small>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <div class="alert alert-warning py-2">
                                        <small>⚠️ No hay firma electrónica configurada.</small>
                                    </div>
                                }
                            </div>
                        </div>

                        <hr class="my-4" />

                        <div class="text-end">
                            <button type="submit" class="btn btn-success btn-lg px-5" disabled="@procesando">
                                @if (procesando)
                                {
                                    <span>⏳ Guardando...</span>
                                }
                                else
                                {
                                    <span>💾 Guardar Configuración</span>
                                }
                            </button>
                        </div>
                    </EditForm>

                    @if (!string.IsNullOrEmpty(mensaje))
                    {
                        <div class="alert @alertaClase mt-3">@mensaje</div>
                    }
                </div>
            </div>
        </div>
    </Authorized>
    <NotAuthorized>
        <div class="alert alert-danger m-5">Acceso restringido. No tiene permisos para ver esta página.</div>
    </NotAuthorized>
</AuthorizeView>

@code {
    // ✅ CORREGIDO: Se declara la variable 'modelo' con el tipo correcto
    private ConfiguracionInicioDto modelo = new();

    // Entidad para mostrar info de solo lectura (lo que viene de la BD)
    private ConfiguracionSRI? configGuardada;

    private IBrowserFile? archivoSeleccionado;
    private string nombreArchivoLocal = "";
    private string mensaje = "";
    private string alertaClase = "";
    private bool procesando = false;

    protected override async Task OnInitializedAsync()
    {
        await CargarDatosExistentes();
    }

    private async Task CargarDatosExistentes()
    {
        try
        {
            var response = await Http.GetFromJsonAsync<ConfiguracionSRI>("api/configuracion");
            if (response != null)
            {
                configGuardada = response;

                // Mapear datos de la BD al DTO del formulario
                modelo.Ruc = response.Ruc;
                modelo.RazonSocial = response.RazonSocial;
                modelo.NombreComercial = response.NombreComercial;
                modelo.DireccionMatriz = response.DireccionMatriz;
                modelo.DireccionEstablecimiento = response.DireccionEstablecimiento;
                modelo.CodigoEstablecimiento = response.CodigoEstablecimiento;
                modelo.CodigoPuntoEmision = response.CodigoPuntoEmision;
                modelo.ObligadoContabilidad = response.ObligadoContabilidad;

                // La clave no se carga por seguridad
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Info: No hay configuración previa o error al cargar: {ex.Message}");
        }
    }

    private void CargarArchivo(InputFileChangeEventArgs e)
    {
        archivoSeleccionado = e.File;
        nombreArchivoLocal = e.File.Name;
    }

    private async Task GuardarTodo()
    {
        procesando = true;
        mensaje = "";

        try
        {
            using var content = new MultipartFormDataContent();

            // 1. Enviamos los datos del DTO ConfiguracionInicioDto como campos de formulario
            content.Add(new StringContent(modelo.Ruc ?? ""), nameof(modelo.Ruc));
            content.Add(new StringContent(modelo.RazonSocial ?? ""), nameof(modelo.RazonSocial));
            content.Add(new StringContent(modelo.DireccionMatriz ?? ""), nameof(modelo.DireccionMatriz));
            content.Add(new StringContent(modelo.CodigoEstablecimiento ?? "001"), nameof(modelo.CodigoEstablecimiento));
            content.Add(new StringContent(modelo.CodigoPuntoEmision ?? "001"), nameof(modelo.CodigoPuntoEmision));
            content.Add(new StringContent(modelo.ObligadoContabilidad.ToString()), nameof(modelo.ObligadoContabilidad));

            // Campos opcionales (validamos nulos para evitar errores)
            content.Add(new StringContent(modelo.NombreComercial ?? ""), nameof(modelo.NombreComercial));
            content.Add(new StringContent(modelo.DireccionEstablecimiento ?? modelo.DireccionMatriz), nameof(modelo.DireccionEstablecimiento));
            content.Add(new StringContent(modelo.ContribuyenteEspecial ?? ""), nameof(modelo.ContribuyenteEspecial));

            // Solo enviamos la clave si el usuario escribió algo
            if (!string.IsNullOrEmpty(modelo.ClaveFirma))
            {
                content.Add(new StringContent(modelo.ClaveFirma), nameof(modelo.ClaveFirma));
            }

            // 2. Gestión del Archivo (Firma)
            if (archivoSeleccionado != null)
            {
                if (string.IsNullOrEmpty(modelo.ClaveFirma))
                {
                    MostrarMensaje("⚠️ Debe ingresar la contraseña para la nueva firma.", "alert-danger");
                    procesando = false;
                    return;
                }

                var fileContent = new StreamContent(archivoSeleccionado.OpenReadStream(maxAllowedSize: 5 * 1024 * 1024));
                fileContent.Headers.ContentType = new MediaTypeHeaderValue("application/x-pkcs12");

                // El nombre "ArchivoP12" debe coincidir con la propiedad en el DTO de la API
                content.Add(fileContent, "ArchivoP12", archivoSeleccionado.Name);

                // Enviamos la clave
                content.Add(new StringContent(modelo.ClaveFirma), "ClaveFirma");
            }

            // 3. Enviar al controlador
            var response = await Http.PostAsync("api/configuracion/guardar", content);

            if (response.IsSuccessStatusCode)
            {
                MostrarMensaje("✅ Configuración guardada correctamente.", "alert-success");
                modelo.ClaveFirma = ""; // Limpiar clave
                archivoSeleccionado = null;
                nombreArchivoLocal = "";
                await CargarDatosExistentes();
            }
            else
            {
                var error = await response.Content.ReadAsStringAsync();
                // Limpiamos el mensaje de error si viene en formato JSON
                MostrarMensaje($"❌ Error: {error}","alert-danger");
            }
        }
        catch (Exception ex)
        {
            MostrarMensaje($"Error de conexión: {ex.Message}", "alert-danger");
        }
        finally
        {
            procesando = false;
        }
    }

    private void MostrarMensaje(string texto, string clase)
    {
        mensaje = texto;
        alertaClase = clase;
    }
}