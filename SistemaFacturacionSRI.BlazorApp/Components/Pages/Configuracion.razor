@page "/configuracion"
@using Microsoft.AspNetCore.Components.Authorization
@using System.Net.Http.Headers
@using SistemaFacturacionSRI.Domain.Entities
@using SistemaFacturacionSRI.Domain.DTOs.Configuracion
@inject HttpClient Http
@inject IJSRuntime JS

<PageTitle>Configuración SRI</PageTitle>

<style>
    /* ------------------------------------------- */
    /* ESTILOS BASE Y ESTRUCTURA (Consistente) */
    /* ------------------------------------------- */
    .container {
        max-width: 1100px;
        margin: 60px auto;
        padding: 0;
    }

    .config-card {
        background: #ffffff;
        border-radius: 20px; /* Un poco más grande */
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.06);
        border: 1px solid #e5e7eb;
        overflow: hidden;
    }

    .config-card-header {
        background-color: #f9fafb;
        padding: 25px 30px;
        border-bottom: 1px solid #e5e7eb;
    }

        .config-card-header h4 {
            font-weight: 700;
            color: #0058ff; /* Título principal en azul */
            font-size: 1.5rem;
        }

    .config-card-body {
        padding: 30px;
    }

    .text-muted {
        color: #6b7280;
    }

    /* ------------------------------------------- */
    /* FORMULARIOS Y LABELS */
    /* ------------------------------------------- */
    label {
        font-weight: 600;
        color: #333;
        margin-bottom: 6px;
        display: block;
    }

    .form-control, .form-select, .form-check-input {
        padding: 12px 16px;
        border-radius: 10px;
        border: 1px solid #e2e8f0;
        box-shadow: 0 1px 2px rgba(0, 0, 0, 0.04);
        transition: border-color 0.2s ease;
        width: 100%;
    }

        .form-control:focus, .form-select:focus {
            border-color: #0058ff;
            outline: none;
            box-shadow: 0 0 0 3px rgba(0, 85, 255, 0.1);
        }

    .validation-message {
        color: #ef4444;
        font-size: 0.9em;
        display: block;
        margin-top: 5px;
    }

    .text-secondary-title {
        color: #4b5563; /* Gris oscuro para subtítulos */
        font-weight: 700;
        font-size: 1.2rem;
        border-bottom: 1px dashed #e5e7eb;
        padding-bottom: 8px;
        margin-bottom: 20px;
    }

    /* ------------------------------------------- */
    /* SECCIONES Y DIVISORES */
    /* ------------------------------------------- */
    .row-divider {
        border-right: 1px solid #e5e7eb;
    }

    /* Checkbox personalizado */
    .form-check {
        padding-left: 0;
    }

    .form-check-label {
        margin-left: 10px;
        cursor: pointer;
    }

    /* ------------------------------------------- */
    /* FIRMA ELECTRÓNICA */
    /* ------------------------------------------- */
    .file-drop-area {
        border: 2px dashed #93c5fd !important; /* Azul más claro */
        background-color: #f7faff;
        border-radius: 12px;
        padding: 20px;
    }

    /* Estilos para el InputFile dentro del área */
    .input-file-custom {
        padding: 8px 10px;
        border-radius: 8px;
        border: 1px solid #c7d2fe;
        background-color: #ffffff;
    }

    /* Mostrar info de archivo cargado */
    .alert-firma-ok {
        background-color: #d1fae5;
        color: #065f46;
        border-color: #6ee7b7;
    }

    .alert-firma-warning {
        background-color: #fef3c7;
        color: #92400e;
        border-color: #fcd34d;
    }

    .alert-info {
        background-color: #e0f2fe;
        color: #0c4a6e;
    }

    /* ------------------------------------------- */
    /* BOTÓN PRINCIPAL */
    /* ------------------------------------------- */
    .btn-success {
        /* Estilo verde degradado (Guardar) */
        background: linear-gradient(135deg, #10b981, #34d399);
        color: white;
        border: none;
        border-radius: 12px;
        padding: 12px 30px;
        font-size: 1.1rem;
        font-weight: 700;
        box-shadow: 0 4px 10px rgba(16, 185, 129, 0.4);
        transition: all 0.2s ease;
    }

        .btn-success:disabled {
            opacity: 0.6;
            box-shadow: none;
        }

</style>

<AuthorizeView Roles="Administrador">
    <Authorized>
        <div class="container">
            <div class="config-card">
                <div class="config-card-header">
                    <h4 class="mb-0">🛡️ Configuración de Facturación SRI</h4>
                </div>

                <div class="config-card-body">
                    <p class="text-muted mb-4">Administra tu perfil, establece tus códigos de emisión y configura la firma electrónica.</p>

                    <EditForm Model="@modelo" OnValidSubmit="GuardarTodo" Context="formContext">
                        <DataAnnotationsValidator />

                        <div class="row">
                            <div class="col-md-6 row-divider pe-4">
                                <h5 class="text-secondary-title">🏢 Datos del Emisor</h5>

                                <div class="mb-3">
                                    <label class="form-label">RUC</label>
                                    <InputText @bind-Value="modelo.Ruc" class="form-control" placeholder="Ej: 1722..." />
                                    <ValidationMessage For="@(() => modelo.Ruc)" />
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Razón Social</label>
                                    <InputText @bind-Value="modelo.RazonSocial" class="form-control" />
                                    <ValidationMessage For="@(() => modelo.RazonSocial)" />
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Nombre Comercial (Opcional)</label>
                                    <InputText @bind-Value="modelo.NombreComercial" class="form-control" />
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Dirección Matriz</label>
                                    <InputText @bind-Value="modelo.DireccionMatriz" class="form-control" />
                                    <ValidationMessage For="@(() => modelo.DireccionMatriz)" />
                                </div>

                                <label class="form-label mb-2">Códigos de Emisión</label>
                                <div class="row">
                                    <div class="col-6 mb-3">
                                        <InputText @bind-Value="modelo.CodigoEstablecimiento" class="form-control" placeholder="001 (Establecimiento)" />
                                    </div>
                                    <div class="col-6 mb-3">
                                        <InputText @bind-Value="modelo.CodigoPuntoEmision" class="form-control" placeholder="001 (Punto Emisión)" />
                                    </div>
                                </div>
                                <ValidationMessage For="@(() => modelo.CodigoEstablecimiento)" />
                                <ValidationMessage For="@(() => modelo.CodigoPuntoEmision)" />


                                <div class="form-check mt-3">
                                    <InputCheckbox @bind-Value="modelo.ObligadoContabilidad" class="form-check-input" id="chkObligado" />
                                    <label class="form-check-label" for="chkObligado">Obligado a llevar contabilidad</label>
                                </div>
                            </div>

                            <div class="col-md-6 ps-4">
                                <h5 class="text-secondary-title">🔐 Firma Electrónica</h5>

                                <div class="mb-4 file-drop-area">
                                    <label class="form-label">Archivo de Firma (.p12)</label>
                                    <div class="mt-2">
                                        <InputFile OnChange="CargarArchivo" class="input-file-custom mx-auto" accept=".p12" />
                                    </div>
                                    <small class="d-block mt-2 text-muted">
                                        @(string.IsNullOrEmpty(nombreArchivoLocal)
                                                                                ? "Seleccione un archivo solo si desea actualizar la firma actual."
                                                                                : $"📎 Archivo seleccionado: {nombreArchivoLocal}")
                                    </small>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Contraseña de la Firma</label>
                                    <InputText @bind-Value="modelo.ClaveFirma" type="password" class="form-control" placeholder="Ingrese solo si sube un nuevo archivo" />
                                    <ValidationMessage For="@(() => modelo.ClaveFirma)" />
                                </div>

                                @if (configGuardada != null && !string.IsNullOrEmpty(configGuardada.NombreArchivo))
                                {
                                    <div class="alert alert-firma-ok py-2 d-flex align-items-center">
                                        <span class="me-2">✅</span>
                                        <div>
                                            <small class="d-block fw-bold">Firma actual cargada:</small>
                                            <small>@configGuardada.NombreArchivo (Subida el @(configGuardada.FechaSubida?.ToShortDateString() ?? "sin fecha"))</small>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <div class="alert alert-firma-warning py-2">
                                        <small>⚠️ No hay firma electrónica configurada. La facturación está deshabilitada.</small>
                                    </div>
                                }
                            </div>
                        </div>

                        <hr class="my-4" style="border-top: 2px solid #e5e7eb;" />

                        <div class="text-end">
                            <button type="submit" class="btn-success" disabled="@procesando">
                                @if (procesando)
                                {
                                    <span>⏳ Guardando...</span>
                                }
                                else
                                {
                                    <span>💾 Guardar Configuración</span>
                                }
                            </button>
                        </div>
                    </EditForm>

                    @if (!string.IsNullOrEmpty(mensaje))
                    {
                        <div class="alert @alertaClase mt-3">@mensaje</div>
                    }
                </div>
            </div>
        </div>
    </Authorized>
    <NotAuthorized>
        <div class="alert alert-danger m-5">Acceso restringido. No tiene permisos para ver esta página.</div>
    </NotAuthorized>
</AuthorizeView>

@code {
    // ✅ CORREGIDO: Se declara la variable 'modelo' con el tipo correcto
    private ConfiguracionInicioDto modelo = new();

    // Entidad para mostrar info de solo lectura (lo que viene de la BD)
    private ConfiguracionSRI? configGuardada;

    private IBrowserFile? archivoSeleccionado;
    private string nombreArchivoLocal = "";
    private string mensaje = "";
    private string alertaClase = "";
    private bool procesando = false;

    protected override async Task OnInitializedAsync()
    {
        await CargarDatosExistentes();
    }

    private async Task CargarDatosExistentes()
    {
        try
        {
            var response = await Http.GetFromJsonAsync<ConfiguracionSRI>("api/configuracion");
            if (response != null)
            {
                configGuardada = response;

                // Mapear datos de la BD al DTO del formulario
                modelo.Ruc = response.Ruc;
                modelo.RazonSocial = response.RazonSocial;
                modelo.NombreComercial = response.NombreComercial;
                modelo.DireccionMatriz = response.DireccionMatriz;
                modelo.DireccionEstablecimiento = response.DireccionEstablecimiento;
                modelo.CodigoEstablecimiento = response.CodigoEstablecimiento;
                modelo.CodigoPuntoEmision = response.CodigoPuntoEmision;
                modelo.ObligadoContabilidad = response.ObligadoContabilidad;

                // La clave no se carga por seguridad
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Info: No hay configuración previa o error al cargar: {ex.Message}");
        }
    }

    private void CargarArchivo(InputFileChangeEventArgs e)
    {
        archivoSeleccionado = e.File;
        nombreArchivoLocal = e.File.Name;
    }

    private async Task GuardarTodo()
    {
        procesando = true;
        mensaje = "";

        try
        {
            using var content = new MultipartFormDataContent();

            // 1. Enviamos los datos del DTO ConfiguracionInicioDto como campos de formulario
            content.Add(new StringContent(modelo.Ruc ?? ""), nameof(modelo.Ruc));
            content.Add(new StringContent(modelo.RazonSocial ?? ""), nameof(modelo.RazonSocial));
            content.Add(new StringContent(modelo.DireccionMatriz ?? ""), nameof(modelo.DireccionMatriz));
            content.Add(new StringContent(modelo.CodigoEstablecimiento ?? "001"), nameof(modelo.CodigoEstablecimiento));
            content.Add(new StringContent(modelo.CodigoPuntoEmision ?? "001"), nameof(modelo.CodigoPuntoEmision));
            content.Add(new StringContent(modelo.ObligadoContabilidad.ToString()), nameof(modelo.ObligadoContabilidad));

            if (!string.IsNullOrEmpty(modelo.NombreComercial))
                content.Add(new StringContent(modelo.NombreComercial), nameof(modelo.NombreComercial));

            // Nota: DireccionEstablecimiento no se utiliza en el formulario actual, pero se incluye por si se añade más tarde.
            // Si el campo DireccionEstablecimiento se añade al formulario, debe ser bind-Value,
            // pero si no se usa en el modelo, se envía un valor vacío para evitar nulls.
            content.Add(new StringContent(modelo.DireccionEstablecimiento ?? modelo.DireccionMatriz), nameof(modelo.DireccionEstablecimiento));


            // 2. Gestión del Archivo (Firma)
            if (archivoSeleccionado != null)
            {
                if (string.IsNullOrEmpty(modelo.ClaveFirma))
                {
                    MostrarMensaje("⚠️ Debe ingresar la contraseña para la nueva firma.", "alert-danger");
                    procesando = false;
                    return;
                }

                var fileContent = new StreamContent(archivoSeleccionado.OpenReadStream(maxAllowedSize: 5 * 1024 * 1024));
                fileContent.Headers.ContentType = new MediaTypeHeaderValue("application/x-pkcs12");

                // El nombre "ArchivoP12" debe coincidir con la propiedad en el DTO de la API
                content.Add(fileContent, "ArchivoP12", archivoSeleccionado.Name);

                // Enviamos la clave
                content.Add(new StringContent(modelo.ClaveFirma), "ClaveFirma");
            }

            // 3. Enviar al controlador
            var response = await Http.PostAsync("api/configuracion/guardar", content);

            if (response.IsSuccessStatusCode)
            {
                MostrarMensaje("✅ Configuración guardada correctamente.", "alert-success");
                modelo.ClaveFirma = ""; // Limpiar clave
                archivoSeleccionado = null;
                nombreArchivoLocal = "";
                await CargarDatosExistentes();
            }
            else
            {
                var error = await response.Content.ReadAsStringAsync();
                MostrarMensaje($"❌ Error: {error}", "alert-danger");
            }
        }
        catch (Exception ex)
        {
            MostrarMensaje($"Error de conexión: {ex.Message}", "alert-danger");
        }
        finally
        {
            procesando = false;
        }
    }

    private void MostrarMensaje(string texto, string clase)
    {
        mensaje = texto;
        alertaClase = clase;
    }
}