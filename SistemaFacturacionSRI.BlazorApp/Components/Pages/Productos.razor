@page "/productos"
@using SistemaFacturacionSRI.Domain.DTOs.Productos
@using SistemaFacturacionSRI.Domain.Entities
@inject HttpClient Http

<PageTitle>Gestión de Productos</PageTitle>

<!-- ✅ Encabezado principal -->
<div class="p-6 bg-gradient-to-br from-blue-50 to-white rounded-2xl shadow-lg border border-gray-200">
    <div class="flex justify-between items-center mb-6 border-b pb-4">
        <h1 class="text-3xl font-extrabold text-blue-800 tracking-tight flex items-center gap-2">
            🧾 Gestión de Productos
        </h1>
        <button @onclick="() => OpenForm(0)"
                class="px-5 py-2 bg-blue-600 text-white font-semibold rounded-lg shadow-md hover:bg-blue-700 focus:ring-2 focus:ring-blue-400 transition-all duration-150 flex items-center">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4"></path>
            </svg>
            Nuevo Producto
        </button>
    </div>

    <!-- ✅ Estados de carga / error -->
    @if (productos == null)
    {
        <div class="flex justify-center py-12 text-gray-500">
            <span class="animate-pulse">Cargando productos...</span>
        </div>
    }
    else if (errorMessage != null)
    {
        <div class="text-center py-8 text-red-600 font-semibold">
            ⚠️ Error al cargar productos: @errorMessage
        </div>
    }
    else if (productos.Count == 0)
    {
        <div class="text-center py-10 text-gray-500 italic">
            No hay productos registrados todavía.
        </div>
    }
    else
    {
        <!-- ✅ Tabla de productos -->
        <div class="overflow-x-auto">
            <table class="min-w-full border border-gray-200 rounded-lg bg-white shadow-sm">
                <thead class="bg-blue-600 text-white">
                    <tr>
                        <th class="py-3 px-4 text-left">Código</th>
                        <th class="py-3 px-4 text-left">Descripción</th>
                        <th class="py-3 px-4 text-left">Tipo</th>
                        <th class="py-3 px-4 text-left">Precio</th>
                        <th class="py-3 px-4 text-left">IVA (%)</th>
                        <th class="py-3 px-4 text-left">Stock</th>
                        <th class="py-3 px-4 text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var p in productos)
                    {
                        <tr class="border-t hover:bg-blue-50 transition duration-150">
                            <td class="py-3 px-4 font-medium text-gray-800">@p.CodigoPrincipal</td>
                            <td class="py-3 px-4">@p.Descripcion</td>
                            <td class="py-3 px-4">@p.TipoProducto</td>
                            <td class="py-3 px-4">$@p.PrecioUnitario.ToString("0.00")</td>
                            <td class="py-3 px-4">@p.PorcentajeIVA%</td>
                            <td class="py-3 px-4">@p.Stock</td>
                            <td class="py-3 px-4 text-center space-x-2">
                                <button @onclick="() => OpenForm(p.Id)" class="text-blue-500 hover:text-blue-700" title="Editar">✏️</button>
                                <button @onclick="() => ConfirmDelete(p.Id, p.Descripcion)" class="text-red-500 hover:text-red-700" title="Eliminar">🗑️</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

<!-- ✅ Modal de creación / edición -->
@if (showFormModal)
{
    <div class="fixed inset-0 bg-black bg-opacity-40 backdrop-blur-sm flex items-center justify-center z-50 p-4">
        <div class="bg-white rounded-2xl shadow-2xl w-full max-w-lg overflow-hidden animate-fadeIn">
            <div class="p-5 border-b flex justify-between items-center bg-blue-600 text-white">
                <h3 class="text-xl font-bold">
                    @(currentProducto.Id == 0 ? "Registrar Nuevo Producto" : $"Editar Producto: {currentProducto.CodigoPrincipal}")
                </h3>
                <button @onclick="CloseForm" class="hover:text-gray-300">✖</button>
            </div>

            <EditForm Model="@currentProducto" OnValidSubmit="@HandleSubmit" class="p-6 space-y-5">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                        <label class="font-semibold text-gray-700 text-sm">Código Principal:</label>
                        <InputText @bind-Value="currentProducto.CodigoPrincipal" class="input w-full" />
                    </div>
                    <div>
                        <label class="font-semibold text-gray-700 text-sm">Código Auxiliar:</label>
                        <InputText @bind-Value="currentProducto.CodigoAuxiliar" class="input w-full" />
                    </div>
                </div>

                <div>
                    <label class="font-semibold text-gray-700 text-sm">Descripción:</label>
                    <InputText @bind-Value="currentProducto.Descripcion" class="input w-full" />
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                        <label class="font-semibold text-gray-700 text-sm">Tipo:</label>
                        <InputSelect @bind-Value="currentProducto.TipoProducto" class="input w-full">
                            <option value="Bien">Bien</option>
                            <option value="Servicio">Servicio</option>
                        </InputSelect>
                    </div>
                    <div>
                        <label class="font-semibold text-gray-700 text-sm">Precio Unitario:</label>
                        <InputNumber TValue="decimal" @bind-Value="currentProducto.PrecioUnitario" class="input w-full" />
                    </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                        <label class="font-semibold text-gray-700 text-sm">IVA (%):</label>
                        <InputSelect @bind-Value="currentProducto.PorcentajeIVA" class="input w-full">
                            <option value="0">0</option>
                            <option value="8">8</option>
                            <option value="12">12</option>
                            <option value="15">15</option>
                        </InputSelect>
                    </div>
                    <div>
                        <label class="font-semibold text-gray-700 text-sm">Stock:</label>
                        <InputNumber TValue="decimal?" @bind-Value="currentProducto.Stock" class="input w-full" />
                    </div>
                </div>

                <div class="flex justify-end gap-3 pt-4 border-t">
                    <button type="button" @onclick="CloseForm" class="bg-gray-400 text-white font-bold py-2 px-5 rounded-lg hover:bg-gray-500 transition">
                        Cancelar
                    </button>
                    <button type="submit" disabled="@isSubmitting" class="bg-blue-600 text-white font-bold py-2 px-5 rounded-lg hover:bg-blue-700 transition disabled:opacity-60">
                        @(isSubmitting ? "Procesando..." : (currentProducto.Id == 0 ? "Guardar" : "Actualizar"))
                    </button>
                </div>
            </EditForm>
        </div>
    </div>
}

<!-- ✅ Modal de eliminación -->
@if (showDeleteModal)
{
    <div class="fixed inset-0 bg-black bg-opacity-40 backdrop-blur-sm flex items-center justify-center z-50">
        <div class="bg-white rounded-xl shadow-2xl w-full max-w-sm p-6 animate-fadeIn">
            <h3 class="text-xl font-bold text-red-600 mb-3">Confirmar eliminación</h3>
            <p class="text-gray-700 mb-6">¿Deseas eliminar el producto <b>@productoToDeleteName</b>?</p>
            <div class="flex justify-end gap-3">
                <button @onclick="CancelDelete" class="bg-gray-400 text-white font-bold py-2 px-5 rounded-lg hover:bg-gray-500 transition">Cancelar</button>
                <button @onclick="HandleDelete" disabled="@isSubmitting" class="bg-red-600 text-white font-bold py-2 px-5 rounded-lg hover:bg-red-700 transition disabled:opacity-60">Eliminar</button>
            </div>
        </div>
    </div>
}

@code {
    private List<Producto>? productos;
    private string? errorMessage;
    private bool showFormModal = false;
    private UpdateProducto currentProducto = new();
    private bool isSubmitting = false;
    private bool showDeleteModal = false;
    private int productoToDeleteId;
    private string productoToDeleteName = string.Empty;

    protected override async Task OnInitializedAsync() => await LoadProductos();

    private async Task LoadProductos()
    {
        productos = null;
        errorMessage = null;
        try
        {
            productos = await Http.GetFromJsonAsync<List<Producto>>("api/productos");
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al cargar productos: {ex.Message}";
        }
    }

    private async Task OpenForm(int id)
    {
        if (id == 0)
            currentProducto = new();
        else
        {
            try
            {
                var producto = await Http.GetFromJsonAsync<Producto>($"api/productos/{id}");
                if (producto != null)
                    currentProducto = new UpdateProducto
                    {
                        Id = producto.Id,
                        CodigoPrincipal = producto.CodigoPrincipal,
                        CodigoAuxiliar = producto.CodigoAuxiliar,
                        Descripcion = producto.Descripcion,
                        TipoProducto = producto.TipoProducto,
                        PrecioUnitario = producto.PrecioUnitario,
                        PorcentajeIVA = producto.PorcentajeIVA,
                        Stock = producto.Stock
                    };
            }
            catch (Exception ex)
            {
                errorMessage = $"Error al cargar producto: {ex.Message}";
                return;
            }
        }
        showFormModal = true;
    }

    private void CloseForm()
    {
        showFormModal = false;
        currentProducto = new();
    }

    private async Task HandleSubmit()
    {
        isSubmitting = true;
        try
        {
            HttpResponseMessage response;
            if (currentProducto.Id == 0)
                response = await Http.PostAsJsonAsync("api/productos", currentProducto);
            else
                response = await Http.PutAsJsonAsync($"api/productos/{currentProducto.Id}", currentProducto);

            if (response.IsSuccessStatusCode)
            {
                CloseForm();
                await LoadProductos();
            }
            else
                errorMessage = $"Error: {response.ReasonPhrase}";
        }
        catch (Exception ex)
        {
            errorMessage = $"Error en la solicitud: {ex.Message}";
        }
        finally
        {
            isSubmitting = false;
        }
    }

    private void ConfirmDelete(int id, string name)
    {
        productoToDeleteId = id;
        productoToDeleteName = name;
        showDeleteModal = true;
    }

    private void CancelDelete() => showDeleteModal = false;

    private async Task HandleDelete()
    {
        isSubmitting = true;
        try
        {
            var response = await Http.DeleteAsync($"api/productos/{productoToDeleteId}");
            if (response.IsSuccessStatusCode)
                await LoadProductos();
            else
                errorMessage = "Error al eliminar producto.";
        }
        catch (Exception ex)
        {
            errorMessage = $"Error: {ex.Message}";
        }
        finally
        {
            isSubmitting = false;
            showDeleteModal = false;
        }
    }
}
