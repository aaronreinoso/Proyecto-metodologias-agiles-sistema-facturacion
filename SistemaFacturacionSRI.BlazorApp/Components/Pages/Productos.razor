@page "/productos"
@inject NavigationManager NavManager
@inject IProductoService ProductoService
@inject ISnackbar Snackbar // Asumiendo que utiliza un componente de Snackbar para notificaciones

<h3>Gestión de Productos 📦</h3>
<p>Listado general de ítems disponibles para venta.</p>

<div class="d-flex justify-content-between mb-3">
    <input type="text" class="form-control w-25" placeholder="Buscar por Código, Nombre, Marca o Presentación..." @oninput="FiltrarProductos" />
    <button class="btn btn-primary" @onclick="GoToCreateWizard">
        <i class="oi oi-plus"></i> Nuevo Producto
    </button>
</div>

@if (productos == null)
{
    <p><em>Cargando productos...</em></p>
}
else
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Código Principal</th>
                <th>Descripción Completa</th>
                <th>IVA</th>
                <th>Stock</th>
                <th>PVP</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in ProductosFiltrados)
            {
                <tr @onclick="() => GoToDetail(p.Id)" style="cursor:pointer">
                    <td>@p.CodigoPrincipal</td>
                    <td>@p.Descripcion</td>
                    <td>@p.TarifaIva?.Porcentaje%</td>
                    <td>@p.Stock</td>
                    <td>@p.PrecioUnitario.ToString("C2")</td>
                    <td>
                        <button class="btn btn-sm btn-outline-info" @onclick:stopPropagation @onclick="() => GoToDetail(p.Id)">
                            <i class="oi oi-magnifying-glass"></i> Ver Lotes
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}


@code {
    private List<Producto>? productos;
    private List<Producto>? ProductosFiltrados { get; set; }

    protected override async Task OnInitializedAsync()
    {
        try
        {
            productos = await ProductoService.GetAllProductosAsync();
            ProductosFiltrados = productos;
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error al cargar: {ex.Message}", Severity.Error);
        }
    }

    private void FiltrarProductos(ChangeEventArgs e)
    {
        string filtro = e.Value?.ToString()?.ToLower() ?? "";
        if (string.IsNullOrWhiteSpace(filtro))
        {
            ProductosFiltrados = productos;
        }
        else
        {
            ProductosFiltrados = productos!
                .Where(p =>
                    p.CodigoPrincipal.ToLower().Contains(filtro) ||
                    p.NombreGenerico.ToLower().Contains(filtro) ||
                    p.Marca.ToLower().Contains(filtro) ||
                    p.Presentacion.ToLower().Contains(filtro))
                .ToList();
        }
    }

    private void GoToCreateWizard()
    {
        NavManager.NavigateTo("/productos/crear");
    }

    private void GoToDetail(int id)
    {
        NavManager.NavigateTo($"/productos/detalle/{id}");
    }
}