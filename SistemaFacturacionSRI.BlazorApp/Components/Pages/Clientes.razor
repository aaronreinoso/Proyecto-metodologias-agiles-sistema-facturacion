@page "/clientes"
@using SistemaFacturacionSRI.Domain.DTOs.Clientes
@using SistemaFacturacionSRI.Domain.Entities
@inject HttpClient Http

<PageTitle>Gestión de Clientes</PageTitle>

<style>
    body {
        font-family: 'Inter', 'Segoe UI', sans-serif;
        background: linear-gradient(180deg, #fafafa 0%, #f3f4f6 100%);
        color: #111418;
        letter-spacing: 0.01em;
    }

    .container {
        max-width: 1100px;
        margin: 60px auto;
        padding: 48px;
        border-radius: 24px;
        background: rgba(255, 255, 255, 0.75);
        backdrop-filter: blur(12px);
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.06);
        border: 1px solid rgba(255, 255, 255, 0.7);
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .container:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08);
        }

    .header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 28px;
    }

        .header h1 {
            font-weight: 800;
            font-size: 32px;
            letter-spacing: -0.03em;
            background: linear-gradient(90deg, #101010, #3b3b3b);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            display: flex;
            align-items: center;
            gap: 8px;
        }

    .btn-primary {
        background: linear-gradient(135deg, #0058ff, #4f9eff);
        color: white;
        border: none;
        border-radius: 12px;
        padding: 10px 18px;
        font-weight: 600;
        cursor: pointer;
        box-shadow: 0 2px 6px rgba(0, 85, 255, 0.25);
        transition: all 0.2s ease;
    }

        .btn-primary:hover {
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(0, 85, 255, 0.35);
            background: linear-gradient(135deg, #2563eb, #5ea0ff);
        }

    table {
        width: 100%;
        border-collapse: collapse;
        background: rgba(255, 255, 255, 0.85);
        border-radius: 12px;
        overflow: hidden;
    }

    th {
        text-align: left;
        padding: 14px 16px;
        color: #333;
        font-weight: 700;
        font-size: 15px;
        border-bottom: 1px solid #e5e7eb;
        background: rgba(250, 250, 250, 0.8);
    }

    td {
        padding: 14px 16px;
        color: #222;
        font-size: 15px;
        border-bottom: 1px solid #f0f2f5;
        transition: background-color 0.2s ease;
    }

    tr:hover td {
        background: rgba(247, 249, 252, 0.6);
    }

    .actions {
        display: flex;
        gap: 8px;
        justify-content: center;
    }

    .icon-btn {
        border: none;
        background: none;
        font-size: 18px;
        opacity: 0.6;
        transition: opacity 0.2s ease, transform 0.15s ease;
        cursor: pointer;
    }

        .icon-btn:hover {
            opacity: 1;
            transform: scale(1.1);
        }

    .modal-overlay {
        position: fixed;
        inset: 0;
        background-color: rgba(255, 255, 255, 0.65);
        backdrop-filter: blur(10px);
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 1000;
        animation: fadeIn 0.25s ease-in-out;
    }

    .modal-box {
        background: white;
        border-radius: 18px;
        padding: 36px;
        width: 90%;
        max-width: 520px;
        box-shadow: 0 12px 40px rgba(0, 0, 0, 0.12);
        border: 1px solid rgba(230, 232, 236, 0.6);
        animation: slideUp 0.25s ease-out;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
        }

        to {
            opacity: 1;
        }
    }

    @@keyframes slideUp {
        from {
            transform: translateY(10px);
            opacity: 0;
        }

        to {
            transform: translateY(0);
            opacity: 1;
        }
    }

    .modal-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 24px;
    }

        .modal-header h3 {
            font-size: 22px;
            font-weight: 700;
            color: #0f172a;
            margin: 0;
        }

    .close-btn {
        border: none;
        background: none;
        font-size: 22px;
        cursor: pointer;
        color: #94a3b8;
        transition: color 0.2s ease;
    }

        .close-btn:hover {
            color: #1e293b;
        }

    label {
        font-weight: 600;
        font-size: 14px;
        color: #374151;
        display: block;
        margin-top: 10px;
    }

    input {
        width: 100%;
        padding: 10px;
        border-radius: 10px;
        border: 1px solid #e2e8f0;
        background: #f9fafb;
        margin-top: 4px;
        font-size: 15px;
        color: #111827;
        transition: all 0.2s ease;
    }

        input:focus {
            background-color: #fff;
            border-color: #2563eb;
            outline: none;
            box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.15);
        }

    .modal-actions {
        display: flex;
        justify-content: flex-end;
        gap: 10px;
        margin-top: 24px;
    }

    .btn-secondary {
        background: #f1f5f9;
        border-radius: 10px;
        color: #111827;
        border: 1px solid #e2e8f0;
        padding: 9px 16px;
        font-weight: 600;
        cursor: pointer;
        transition: background 0.2s ease;
    }

        .btn-secondary:hover {
            background: #e2e8f0;
        }
</style>

<div class="container">
    <div class="header">
        <h1>👥 Gestión de Clientes</h1>
        <button class="btn-primary" @onclick="() => OpenForm(0)">＋ Nuevo Cliente</button>
    </div>

    @if (clientes == null)
    {
        <div style="text-align:center; padding:40px; color:#6b7280;">Cargando clientes...</div>
    }
    else if (errorMessage != null)
    {
        <div style="color:#ef4444; text-align:center; font-weight:600; padding:20px;">⚠️ @errorMessage</div>
    }
    else if (clientes.Count == 0)
    {
        <div style="text-align:center; padding:30px; color:#6b7280; font-style:italic;">No hay clientes registrados.</div>
    }
    else
    {
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Identificación</th>
                    <th>Nombre Completo</th>
                    <th>Email</th>
                    <th>Teléfono</th>
                    <th style="text-align:center;">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var c in clientes)
                {
                    <tr>
                        <td>@c.Id</td>
                        <td>@c.Identificacion</td>
                        <td>@c.NombreCompleto</td>
                        <td>@c.Email</td>
                        <td>@c.Telefono</td>
                        <td>
                            <div class="actions">
                                <button class="icon-btn" title="Editar" @onclick="() => OpenForm(c.Id)">✏️</button>
                                <button class="icon-btn" title="Eliminar" @onclick="() => ConfirmDelete(c.Id, c.NombreCompleto)">🗑️</button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

@if (showFormModal)
{
    <div class="modal-overlay">
        <div class="modal-box">
            <div class="modal-header">
                <h3>@(currentCliente.Id == 0 ? "Registrar nuevo cliente" : $"Editar: {currentCliente.NombreCompleto}")</h3>
                <button class="close-btn" @onclick="CloseForm">×</button>
            </div>

            <EditForm Model="@currentCliente" OnValidSubmit="HandleSubmit">
                <label>Identificación</label>
                <InputText @bind-Value="currentCliente.Identificacion" />

                <label>Nombre Completo</label>
                <InputText @bind-Value="currentCliente.NombreCompleto" />

                <label>Dirección</label>
                <InputText @bind-Value="currentCliente.Direccion" />

                <label>Teléfono</label>
                <InputText @bind-Value="currentCliente.Telefono" />

                <label>Email</label>
                <InputText @bind-Value="currentCliente.Email" />

                <div class="modal-actions">
                    <button type="button" class="btn-secondary" @onclick="CloseForm">Cancelar</button>
                    <button type="submit" class="btn-primary" disabled="@isSubmitting">
                        @(isSubmitting ? "Procesando..." : (currentCliente.Id == 0 ? "Guardar" : "Actualizar"))
                    </button>
                </div>
            </EditForm>
        </div>
    </div>
}

@if (showDeleteModal)
{
    <div class="modal-overlay">
        <div class="modal-box">
            <h3 style="color:#ef4444;">Confirmar eliminación</h3>
            <p>¿Deseas eliminar al cliente <b>@clienteToDeleteName</b>?</p>
            <div class="modal-actions">
                <button class="btn-secondary" @onclick="CancelDelete">Cancelar</button>
                <button class="btn-primary" style="background:#ef4444" @onclick="HandleDelete" disabled="@isSubmitting">Eliminar</button>
            </div>
        </div>
    </div>
}

@code {
    private List<Cliente>? clientes;
    private string? errorMessage;
    private bool showFormModal = false;
    private UpdateCliente currentCliente = new();
    private bool isSubmitting = false;
    private bool showDeleteModal = false;
    private int clienteToDeleteId;
    private string clienteToDeleteName = string.Empty;

    protected override async Task OnInitializedAsync() => await LoadClientes();

    private async Task LoadClientes()
    {
        clientes = null;
        errorMessage = null;
        try
        {
            clientes = await Http.GetFromJsonAsync<List<Cliente>>("api/clientes");
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al cargar clientes: {ex.Message}";
        }
    }

    private async Task OpenForm(int id)
    {
        if (id == 0)
            currentCliente = new();
        else
        {
            try
            {
                var cliente = await Http.GetFromJsonAsync<Cliente>($"api/clientes/{id}");
                if (cliente != null)
                    currentCliente = new UpdateCliente
                    {
                        Id = cliente.Id,
                        Identificacion = cliente.Identificacion,
                        NombreCompleto = cliente.NombreCompleto,
                        Direccion = cliente.Direccion,
                        Telefono = cliente.Telefono,
                        Email = cliente.Email
                    };
            }
            catch (Exception ex)
            {
                errorMessage = $"Error al cargar cliente: {ex.Message}";
                return;
            }
        }
        showFormModal = true;
        StateHasChanged();
    }

    private void CloseForm()
    {
        showFormModal = false;
        currentCliente = new();
        StateHasChanged();
    }

    private async Task HandleSubmit()
    {
        isSubmitting = true;
        try
        {
            HttpResponseMessage response;
            if (currentCliente.Id == 0)
                response = await Http.PostAsJsonAsync("api/clientes", currentCliente);
            else
                response = await Http.PutAsJsonAsync($"api/clientes/{currentCliente.Id}", currentCliente);

            if (response.IsSuccessStatusCode)
            {
                CloseForm();
                await LoadClientes();
            }
            else
                errorMessage = $"Error: {response.ReasonPhrase}";
        }
        catch (Exception ex)
        {
            errorMessage = $"Error en la solicitud: {ex.Message}";
        }
        finally
        {
            isSubmitting = false;
        }
    }

    private void ConfirmDelete(int id, string name)
    {
        clienteToDeleteId = id;
        clienteToDeleteName = name;
        showDeleteModal = true;
        StateHasChanged();
    }

    private void CancelDelete()
    {
        showDeleteModal = false;
        StateHasChanged();
    }

    private async Task HandleDelete()
    {
        isSubmitting = true;
        try
        {
            var response = await Http.DeleteAsync($"api/clientes/{clienteToDeleteId}");
            if (response.IsSuccessStatusCode)
                await LoadClientes();
            else
                errorMessage = "Error al eliminar cliente.";
        }
        catch (Exception ex)
        {
            errorMessage = $"Error: {ex.Message}";
        }
        finally
        {
            isSubmitting = false;
            showDeleteModal = false;
            StateHasChanged();
        }
    }
}
