@page "/clientes"
@using SistemaFacturacionSRI.Domain.DTOs.Clientes
@using SistemaFacturacionSRI.Domain.Entities
@using SistemaFacturacionSRI.Domain.Enumss
@inject HttpClient Http

<PageTitle>Gestión de Clientes</PageTitle>

<style>
    body {
        font-family: 'Inter', sans-serif;
        background-color: #f3f4f6;
        color: #111827;
    }

    .container {
        max-width: 1200px;
        margin: 40px auto;
        padding: 48px; /* Aumentado padding para consistencia */
        border-radius: 24px;
        background: rgba(255, 255, 255, 0.9);
        backdrop-filter: blur(12px);
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.06);
        border: 1px solid rgba(255, 255, 255, 0.7);
    }

    .header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 28px; /* Reducido para consistencia */
    }

        .header h1 {
            font-size: 32px;
            font-weight: 800;
            color: #1a1a1a;
            margin: 0;
        }

    .btn-add {
        /* Usando el estilo btn-primary para consistencia visual */
        background: linear-gradient(135deg, #0058ff, #4f9eff);
        color: white;
        border: none;
        padding: 10px 18px;
        border-radius: 12px;
        font-weight: 600;
        cursor: pointer;
        box-shadow: 0 2px 6px rgba(0, 85, 255, 0.25);
        transition: all 0.2s ease;
    }

        .btn-add:hover {
            opacity: 0.9;
        }

    .table-container {
        background: white;
        border-radius: 16px; /* Aumentado para consistencia */
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05); /* Sombra suave */
        overflow: hidden;
        border: 1px solid #e5e7eb;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        text-align: left;
    }

    th {
        background-color: #f9fafb;
        padding: 15px 24px; /* Aumentado padding para consistencia */
        font-size: 13px;
        font-weight: 700;
        text-transform: uppercase;
        color: #374151; /* Gris oscuro para headers */
        letter-spacing: 0.05em;
        border-bottom: 2px solid #e5e7eb;
    }

    td {
        padding: 16px 24px;
        border-bottom: 1px solid #f3f4f6; /* Línea más clara */
        font-size: 14px;
        color: #374151;
        transition: background-color 0.2s;
    }

    tr:last-child td {
        border-bottom: none;
    }

    tr:hover td {
        background-color: #f5f8ff; /* Estilo hover suave */
    }

    .badge {
        display: inline-block;
        padding: 4px 10px;
        border-radius: 8px; /* Redondeado suave */
        font-size: 12px;
        font-weight: 600;
    }

    /* Colores consistentes */
    .bg-blue {
        background-color: #dbeafe;
        color: #1e40af;
    }
    /* RUC/Cédula */
    .bg-green {
        background-color: #dcfce7;
        color: #166534;
    }
    /* Cédula */
    .bg-purple {
        background-color: #f3e8ff;
        color: #6b21a8;
    }
    /* Pasaporte */

    .action-btn {
        background: none;
        border: none;
        cursor: pointer;
        padding: 4px;
        margin-right: 8px;
        font-size: 18px; /* Íconos más grandes */
        opacity: 0.7;
        transition: opacity 0.1s, transform 0.1s;
    }

        .action-btn:hover {
            opacity: 1;
            transform: scale(1.1);
        }

    /* ------------------------------------------- */
    /* MODAL (Reutilizando estilos de productos) */
    /* ------------------------------------------- */
    .modal-backdrop {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0,0,0,0.5);
        backdrop-filter: blur(4px);
        z-index: 50;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .modal-content {
        background: white;
        width: 100%;
        max-width: 600px;
        border-radius: 18px; /* Más redondeado */
        box-shadow: 0 12px 40px rgba(0,0,0,0.12);
        padding: 30px;
    }

    /* Estilos de formulario consistentes */
    input, select, textarea, .form-control {
        width: 100%;
        padding: 12px 16px;
        border-radius: 10px;
        border: 1px solid #e2e8f0;
        font-size: 14px;
        transition: border-color 0.15s;
    }

        input:focus, select:focus, textarea:focus {
            outline: none;
            border-color: #0058ff;
            box-shadow: 0 0 0 3px rgba(0, 85, 255, 0.1);
        }

    .form-group {
        margin-bottom: 16px;
    }

    .form-row {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 16px;
    }

    .link-btn {
        color: #0058ff;
        font-weight: 600;
        text-decoration: none;
        cursor: pointer;
    }

    .modal-footer {
        display: flex;
        justify-content: flex-end;
        gap: 12px;
        margin-top: 24px;
        padding-top: 20px;
        border-top: 1px solid #f3f4f6;
    }

    .btn-secondary {
        /* Gris claro (Cancelar) */
        background: #f1f5f9;
        color: #111827;
        border: 1px solid #e2e8f0;
        padding: 10px 18px;
        border-radius: 10px;
        font-weight: 600;
        cursor: pointer;
    }

    .btn-save {
        /* Azul degradado (Guardar) */
        background: linear-gradient(135deg, #0058ff, #4f9eff);
        color: white;
        padding: 10px 18px;
        border-radius: 12px;
        font-weight: 600;
        cursor: pointer;
        border: none;
    }

    .error-box {
        background-color: #fef2f2;
        border: 1px solid #fecaca;
        color: #991b1b;
        padding: 12px;
        border-radius: 8px;
        margin-bottom: 20px;
        font-size: 14px;
        display: flex;
        align-items: center;
        gap: 8px;
    }
</style>

<div class="container">
    <div class="header">
        <h1>👥 Clientes</h1>
        <button class="btn-add" @onclick="() => OpenForm(0)">+ Nuevo Cliente</button>
    </div>

    @if (errorMessage != null)
    {
        <div class="error-box">⚠️ @errorMessage</div>
    }

    @if (clientes == null)
    {
        <div style="text-align: center; padding: 40px; color: #6b7280;">Cargando datos...</div>
    }
    else
    {
        <div class="table-container">
            <table class="styled-table">
                <thead>
                    <tr>
                        <th>Identificación</th>
                        <th>Nombre / Razón Social</th>
                        <th>Contacto</th>
                        <th>Ubicación</th>
                        <th style="text-align: center;">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (clientes.Count == 0)
                    {
                        <tr><td colspan="5" style="text-align: center; padding: 30px; color: #9ca3af; border-bottom: none;">No hay clientes registrados.</td></tr>
                    }
                    @foreach (var cliente in clientes)
                    {
                        <tr>
                            <td>
                                <div style="font-weight: 600; color: #111827;">@cliente.Identificacion</div>
                                <span class="badge @GetBadgeClass(cliente.TipoIdentificacion)">@cliente.TipoIdentificacion</span>
                            </td>
                            <td><div style="font-weight: 500;">@cliente.NombreCompleto</div></td>
                            <td>
                                <div style="font-size: 13px;">📧 @cliente.Email</div>
                                <div style="font-size: 13px;">📞 @cliente.Telefono</div>
                            </td>
                            <td>
                                <div style="font-size: 13px;">@cliente.Pais</div>
                                <div style="font-size: 12px; color: #6b7280;">@cliente.Direccion</div>
                            </td>
                            <td style="text-align: center;">
                                <button class="action-btn" title="Editar" @onclick="() => OpenForm(cliente.Id)">✏️</button>
                                <button class="action-btn" style="color: #ef4444;" title="Eliminar" @onclick="() => ConfirmDelete(cliente.Id)">🗑️</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@if (showFormModal)
{
    <div class="modal-backdrop">
        <div class="modal-content">
            <div style="display:flex; justify-content:space-between; margin-bottom:20px;">
                <h2 style="margin:0; font-size:24px; font-weight:700;">@(currentCliente.Id == 0 ? "Registrar Cliente" : "Editar Cliente")</h2>
                <button @onclick="CloseForm" class="close-btn">×</button>
            </div>

            @if (!string.IsNullOrEmpty(serverValidationError))
            {
                <div class="error-box">
                    <span style="font-weight:bold;">Error:</span> @serverValidationError
                </div>
            }

            <EditForm Model="@currentCliente" OnValidSubmit="HandleSubmit">
                <DataAnnotationsValidator />

                <div class="form-row">
                    <div class="form-group">
                        <label>Tipo Identificación (*)</label>
                        <InputSelect @bind-Value="currentCliente.TipoIdentificacion" class="form-control" @onchange="OnTipoIdentificacionChange">
                            @foreach (var tipo in Enum.GetValues(typeof(TipoIdentificacion)))
                            {
                                <option value="@tipo">@tipo</option>
                            }
                        </InputSelect>
                    </div>
                    <div class="form-group">
                        <label>Número (*)</label>
                        <InputText @bind-Value="currentCliente.Identificacion"
                                   class="form-control"
                                   maxlength="@GetMaxLength(currentCliente.TipoIdentificacion)"
                                   placeholder="Ej: 1725..."
                                   onkeypress="@(currentCliente.TipoIdentificacion == TipoIdentificacion.Pasaporte ? "" : "return event.charCode >= 48 && event.charCode <= 57")" />

                        <div class="helper-text">@GetHintText(currentCliente.TipoIdentificacion)</div>
                        <ValidationMessage For="@(() => currentCliente.Identificacion)" />
                    </div>
                </div>

               @*  <div style="text-align: right; margin-top: -15px; margin-bottom: 15px;">
                    <button type="button" class="link-btn" @onclick="SetConsumidorFinal">Usar Consumidor Final</button>
                </div>
                *@
                <div class="form-group">
                    <label>Nombre Completo (*)</label>
                    <InputText @bind-Value="currentCliente.NombreCompleto" class="form-control" style="text-transform:uppercase;" />
                    <ValidationMessage For="@(() => currentCliente.NombreCompleto)" />
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label>País @(currentCliente.TipoIdentificacion == TipoIdentificacion.Pasaporte ? "(*)" : "")</label>

                        <InputText @bind-Value="currentCliente.Pais"
                                   class="form-control"
                                   disabled="@(currentCliente.TipoIdentificacion != TipoIdentificacion.Pasaporte)" />

                        <ValidationMessage For="@(() => currentCliente.Pais)" />
                    </div>
                    <div class="form-group">
                        <label>Teléfono</label>
                        <InputText @bind-Value="currentCliente.Telefono"
                                   class="form-control"
                                   maxlength="10"
                                   onkeypress="return event.charCode >= 48 && event.charCode <= 57" />
                        <ValidationMessage For="@(() => currentCliente.Telefono)" />
                    </div>
                </div>
                <div class="form-group">
                    <label>Correo Electrónico (*)</label>
                    <InputText @bind-Value="currentCliente.Email" class="form-control" placeholder="cliente@ejemplo.com" />
                    <ValidationMessage For="@(() => currentCliente.Email)" />
                </div>

                <div class="form-group">
                    <label>Dirección</label>
                    <InputTextArea @bind-Value="currentCliente.Direccion" rows="2" class="form-control" />
                    <ValidationMessage For="@(() => currentCliente.Direccion)" />
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn-secondary" @onclick="CloseForm">Cancelar</button>
                    <button type="submit" class="btn-save" disabled="@isSubmitting">
                        @(isSubmitting ? "Guardando..." : "Guardar Cliente")
                    </button>
                </div>
            </EditForm>
        </div>
    </div>
}

@if (showDeleteModal)
{
    <div class="modal-backdrop">
        <div class="modal-content" style="max-width: 400px; text-align: center;">
            <div style="font-size: 48px; margin-bottom: 16px;">🗑️</div>
            <h3 style="margin-bottom: 8px;">¿Eliminar Cliente?</h3>
            <p style="color: #6b7280; margin-bottom: 24px;">Esta acción no se puede deshacer.</p>
            <div style="display: flex; justify-content: center; gap: 12px;">
                <button class="btn-secondary" @onclick="() => showDeleteModal = false">Cancelar</button>
                <button class="btn-save" style="background: linear-gradient(135deg, #dc2626, #ef4444);" @onclick="HandleDelete" disabled="@isSubmitting">Confirmar</button>
            </div>
        </div>
    </div>
}

@code {
    private List<Cliente>? clientes;
    private string? errorMessage;
    private string? serverValidationError;
    private bool showFormModal = false;
    private bool showDeleteModal = false;
    private bool isSubmitting = false;
    private UpdateCliente currentCliente = new();
    private int deleteId;

    protected override async Task OnInitializedAsync() => await LoadClientes();

    private async Task LoadClientes()
    {
        try { clientes = await Http.GetFromJsonAsync<List<Cliente>>("api/clientes"); errorMessage = null; }
        catch (Exception ex) { errorMessage = $"Error técnico: {ex.Message}"; }
    }

    private async Task OpenForm(int id)
    {
        serverValidationError = null;
        if (id == 0)
        {
            // Inicialización por defecto: Cédula y Ecuador
            currentCliente = new UpdateCliente { Id = 0, TipoIdentificacion = TipoIdentificacion.Cedula, Pais = "Ecuador" };
        }
        else
        {
            try
            {
                var c = await Http.GetFromJsonAsync<Cliente>($"api/clientes/{id}");
                if (c != null) currentCliente = new UpdateCliente { Id = c.Id, TipoIdentificacion = c.TipoIdentificacion, Identificacion = c.Identificacion, NombreCompleto = c.NombreCompleto, Direccion = c.Direccion, Telefono = c.Telefono, Email = c.Email, Pais = c.Pais };
            }
            catch { errorMessage = "Error cargando cliente."; return; }
        }
        showFormModal = true;
    }

    // --- NUEVO: Manejo de cambio de Identificación ---
    private void OnTipoIdentificacionChange(ChangeEventArgs e)
    {
        // Esto es necesario para que Blazor actualice el enum en currentCliente
        if (Enum.TryParse<TipoIdentificacion>(e.Value?.ToString(), out var nuevoTipo))
        {
            currentCliente.TipoIdentificacion = nuevoTipo;

            if (nuevoTipo == TipoIdentificacion.Pasaporte)
            {
                // Si es pasaporte, el país es editable y puede ser cualquier valor
                if (currentCliente.Pais == "Ecuador")
                {
                    currentCliente.Pais = ""; // Borrar "Ecuador" para permitir al usuario ingresar otro país
                }
            }
            else
            {
                // Si no es pasaporte, el país es fijo
                currentCliente.Pais = "Ecuador";
            }
            // Limpiar la identificación para forzar nueva entrada si el tipo cambia
            currentCliente.Identificacion = "";
        }
    }


    private void SetConsumidorFinal()
    {
        currentCliente.TipoIdentificacion = TipoIdentificacion.Ruc;
        currentCliente.Identificacion = "9999999999999";
        currentCliente.NombreCompleto = "CONSUMIDOR FINAL";
        // La dirección ya no es obligatoria, se puede dejar vacía o poner S/D
        currentCliente.Direccion = "S/D ";
        currentCliente.Telefono = "9999999999";
        currentCliente.Email = "facturacion@consumidor.final";
        currentCliente.Pais = "Ecuador";
    }

    private async Task HandleSubmit()
    {
        isSubmitting = true;
        serverValidationError = null;

        // Regla de validación de País: Si es Pasaporte Y el país está vacío, mostrar error
        if (currentCliente.TipoIdentificacion == TipoIdentificacion.Pasaporte && string.IsNullOrWhiteSpace(currentCliente.Pais))
        {
            serverValidationError = "Si la identificación es Pasaporte, el campo País no puede estar vacío.";
            isSubmitting = false;
            return;
        }

        try
        {
            HttpResponseMessage response;

            // Aseguramos que la dirección no nula, incluso si está vacía (asumiendo que el DTO lo soporta)
            if (string.IsNullOrWhiteSpace(currentCliente.Direccion))
            {
                currentCliente.Direccion = "S/D";
            }

            // Aseguramos que el país sea Ecuador si no es Pasaporte
            if (currentCliente.TipoIdentificacion != TipoIdentificacion.Pasaporte)
            {
                currentCliente.Pais = "Ecuador";
            }


            if (currentCliente.Id == 0)
            {
                // Crear DTO para POST
                var createDto = new CreateCliente
                {
                    TipoIdentificacion = currentCliente.TipoIdentificacion,
                    Identificacion = currentCliente.Identificacion,
                    NombreCompleto = currentCliente.NombreCompleto,
                    Direccion = currentCliente.Direccion,
                    Telefono = currentCliente.Telefono,
                    Email = currentCliente.Email,
                    Pais = currentCliente.Pais
                };
                response = await Http.PostAsJsonAsync("api/clientes", createDto);
            }
            else
            {
                // Usar UpdateCliente para PUT
                response = await Http.PutAsJsonAsync($"api/clientes/{currentCliente.Id}", currentCliente);
            }

            if (response.IsSuccessStatusCode)
            {
                showFormModal = false;
                await LoadClientes();
            }
            else
            {
                var errorBody = await response.Content.ReadAsStringAsync();
                serverValidationError = ExtraerMensajeError(errorBody);
            }
        }
        catch (Exception)
        {
            serverValidationError = "Error de comunicación con el servidor.";
        }
        finally
        {
            isSubmitting = false;
        }
    }

    // Función auxiliar para limpiar el JSON (Mantenida intacta)
    private string ExtraerMensajeError(string jsonResponse)
    {
        try
        {
            if (!jsonResponse.Trim().StartsWith("{"))
                return jsonResponse.Trim('"');

            using var doc = System.Text.Json.JsonDocument.Parse(jsonResponse);
            var root = doc.RootElement;

            if (root.TryGetProperty("errors", out var errors))
            {
                foreach (var prop in errors.EnumerateObject())
                {
                    if (prop.Value.ValueKind == System.Text.Json.JsonValueKind.Array)
                    {
                        return prop.Value[0].GetString() ?? "Datos inválidos.";
                    }
                }
            }
            if (root.TryGetProperty("message", out var message))
            {
                return message.GetString() ?? "Error en la solicitud.";
            }

            return "Verifique los datos ingresados.";
        }
        catch
        {
            return jsonResponse;
        }
    }

    private void ConfirmDelete(int id) { deleteId = id; showDeleteModal = true; }

    private async Task HandleDelete()
    {
        isSubmitting = true;
        try
        {
            var res = await Http.DeleteAsync($"api/clientes/{deleteId}");
            if (res.IsSuccessStatusCode)
            {
                showDeleteModal = false;
                await LoadClientes();
            }
            else
            {
                errorMessage = "No se pudo eliminar";
            }
        }
        catch
        {
            errorMessage = "Error conexion";
        }
        isSubmitting = false;
    }
    private void CloseForm() => showFormModal = false;

    // --- FUNCIONES VISUALES (Mantenidas intactas) ---
    private string GetBadgeClass(TipoIdentificacion tipo) => tipo switch { TipoIdentificacion.Ruc => "bg-blue", TipoIdentificacion.Cedula => "bg-green", TipoIdentificacion.Pasaporte => "bg-purple", _ => "" };
    private string GetHintText(TipoIdentificacion tipo) => tipo switch { TipoIdentificacion.Ruc => "Se requieren 13 dígitos", TipoIdentificacion.Cedula => "Se requieren 10 dígitos", TipoIdentificacion.Pasaporte => "Alfanumérico (3-20 caracteres)", _ => "" };

    private int GetMaxLength(TipoIdentificacion tipo)
    {
        return tipo switch
        {
            TipoIdentificacion.Cedula => 10,
            TipoIdentificacion.Ruc => 13,
            TipoIdentificacion.Pasaporte => 20,
            _ => 20
        };
    }
}