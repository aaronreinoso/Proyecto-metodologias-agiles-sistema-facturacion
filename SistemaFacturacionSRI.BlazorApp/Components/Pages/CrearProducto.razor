@page "/productos/crear"
@using SistemaFacturacionSRI.Domain.DTOs.Productos
@using SistemaFacturacionSRI.Domain.Entities
@using SistemaFacturacionSRI.Domain.Reglas
@inject HttpClient Http
@inject NavigationManager NavManager

<PageTitle>Nuevo Producto - Wizard</PageTitle>

<style>
    /* ------------------------------------------- */
    /* ESTILOS DE ESTRUCTURA Y FONDO (Tomados de Productos.razor) */
    /* ------------------------------------------- */
    .container {
        max-width: 900px;
        margin: 60px auto;
        padding: 48px;
        border-radius: 24px;
        background: rgba(255, 255, 255, 0.9); /* Ligeramente opaco */
        backdrop-filter: blur(12px);
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.06);
        border: 1px solid rgba(255, 255, 255, 0.7);
    }

    .header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 28px;
    }

        .header h1 {
            font-weight: 800;
            font-size: 32px;
            color: #1a1a1a;
        }

    /* ------------------------------------------- */
    /* BOTONES */
    /* ------------------------------------------- */
    .btn-primary {
        background: linear-gradient(135deg, #0058ff, #4f9eff);
        color: white;
        border: none;
        border-radius: 12px;
        padding: 10px 18px;
        font-weight: 600;
        cursor: pointer;
        box-shadow: 0 2px 6px rgba(0, 85, 255, 0.25);
        transition: all 0.2s ease;
    }

        .btn-primary:disabled {
            opacity: 0.6;
            cursor: not-allowed;
        }

    .btn-secondary {
        background: #f1f5f9;
        border-radius: 10px;
        color: #111827;
        border: 1px solid #e2e8f0;
        padding: 9px 16px;
        font-weight: 600;
        cursor: pointer;
        transition: background 0.2s ease;
    }

        .btn-secondary:hover {
            background: #e2e8f0;
        }

    .btn-success {
        /* Estilo para el botón de Guardar */
        background: linear-gradient(135deg, #10b981, #34d399);
        color: white;
        border: none;
        border-radius: 12px;
        padding: 12px 24px;
        font-size: 18px;
        font-weight: 700;
        cursor: pointer;
        box-shadow: 0 3px 10px rgba(16, 185, 129, 0.3);
        transition: all 0.2s ease;
    }

        .btn-success:disabled {
            opacity: 0.6;
            cursor: not-allowed;
            box-shadow: none;
        }

    /* ------------------------------------------- */
    /* FORMULARIO Y WIZARD */
    /* ------------------------------------------- */

    /* Contenedor de bloque (simula la tarjeta interna del mockup) */
    .form-block {
        border-radius: 16px;
        padding: 24px;
        margin-bottom: 30px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.03);
        background-color: #ffffff;
        border: 1px solid #e5e7eb;
    }

    .form-block-header {
        display: flex;
        align-items: center;
        gap: 12px;
        margin-bottom: 15px;
    }

        .form-block-header h5 {
            margin: 0;
            font-weight: 700;
            color: #333;
        }

    .icon-wizard {
        color: #0058ff;
        width: 20px;
        height: 20px;
    }

    /* Estilo de Input (Asume form-control) */
    .form-control, .form-select {
        width: 100%;
        padding: 12px 16px;
        border-radius: 10px;
        border: 1px solid #e2e8f0;
        transition: border-color 0.2s ease;
        box-shadow: 0 1px 2px rgba(0, 0, 0, 0.04);
    }

        .form-control:focus, .form-select:focus {
            border-color: #0058ff;
            outline: none;
            box-shadow: 0 0 0 3px rgba(0, 85, 255, 0.1);
        }

    label {
        font-weight: 600;
        color: #333;
        margin-bottom: 6px;
        display: block;
    }

    /* Estilos de Tarjetas de Categoría (Wizard) */
    .card-category {
        border: 1px solid #e2e8f0;
        padding: 20px;
        border-radius: 12px;
        cursor: pointer;
        transition: all 0.2s ease;
        min-height: 100px;
        background: #ffffff;
    }

        .card-category:hover {
            border-color: #92baff;
            box-shadow: 0 4px 15px rgba(0, 85, 255, 0.1);
        }

        .card-category.selected {
            border-width: 2px;
            border-color: #0058ff;
            background-color: #e6f0ff; /* Fondo azul claro para selección */
            box-shadow: 0 4px 15px rgba(0, 85, 255, 0.2);
        }

        .card-category h6 {
            font-weight: 700;
            font-size: 16px;
            margin-top: 0;
        }

    /* ------------------------------------------- */
    /* MENSAJES */
    /* ------------------------------------------- */
    .validation-message, .alert-danger {
        color: #ef4444;
        font-size: 13px;
        display: block;
    }

    .alert {
        padding: 15px;
        border-radius: 10px;
        margin-bottom: 20px;
        font-weight: 600;
    }

    .alert-info {
        background-color: #e0f2fe;
        color: #0c4a6e;
    }

    .alert-danger, .alert-warning {
        background-color: #fee2e2;
        color: #991b1b;
    }

    .alert-success {
        background-color: #d1fae5;
        color: #065f46;
    }

    /* Estilo para inputs de tipo checkbox */
    .form-check-input {
        width: 1.25em;
        height: 1.25em;
        margin-top: 0.25em;
        vertical-align: top;
        background-color: #fff;
        border: 1px solid #adb5bd;
        border-radius: 0.25rem;
        appearance: none;
        cursor: pointer;
    }

        .form-check-input:checked {
            background-color: #0058ff;
            border-color: #0058ff;
        }

    .text-muted {
        color: #6b7280 !important;
    }

    /* Utilidades de espaciado */
    .row > div {
        margin-bottom: 12px;
    }

    .mt-3 {
        margin-top: 1rem !important;
    }

    .mt-4 {
        margin-top: 1.5rem !important;
    }
</style>

<div class="container">
    <div class="header">
        <h1>➕ Registrar Nuevo Producto</h1>
        <button class="btn-secondary" @onclick="GoBack">
            ← Volver a Productos
        </button>
    </div>

    @if (isLoading)
    {
        <div class="alert alert-info">Cargando tarifas y datos iniciales...</div>
    }
    else
    {
        @if (!string.IsNullOrEmpty(requestMessage))
        {
            <div class="alert @requestClase">@requestMessage</div>
        }

        <EditForm Model="@productoDto" OnValidSubmit="GuardarProducto">
            <DataAnnotationsValidator />

            <!-- BLOQUE 1: Categoría Fiscal (Wizard) -->
            <div class="form-block">
                <div class="form-block-header">
                    <span class="icon-wizard">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"></circle><path d="M12 16v-4"></path><path d="M12 8h.01"></path></svg>
                    </span>
                    <h5>1. Categorización Inteligente</h5>
                </div>

                <p class="text-muted" style="font-size: 0.9em; margin-top: -10px;">
                    Selecciona la categoría. El sistema configurará automáticamente el IVA y si es perecible.
                </p>

                <div class="row g-3">
                    @foreach (var categoria in ReglasProducto.CategoriasBase)
                    {
                        <div class="col-md-4" @onclick="() => SelectCategoria(categoria)">
                            <div class="card-category @(selectedCategoriaId == categoria.Id ? "selected" : "")">
                                <h6 class="mb-1">@categoria.Nombre</h6>
                                <small class="text-muted">IVA **@(tarifasIva?.FirstOrDefault(t => t.Id == categoria.TarifaIvaIdPorDefecto)?.Porcentaje.ToString("0") ?? "--")%**</small>
                                <br />
                                <small class="text-muted">@(categoria.EsPereciblePorDefecto ? "Gestiona Lotes/Caducidad" : "No perecible")</small>
                            </div>
                        </div>
                    }
                </div>
                @if (selectedCategoriaId == 0)
                {
                    <div class="validation-message mt-2">Debe seleccionar una categoría de base.</div>
                }
            </div>

            <!-- BLOQUE 2: Identidad del Producto -->
            <div class="form-block">
                <div class="form-block-header">
                    <span class="icon-wizard">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M4 22V7a4 4 0 0 1 4-4h8a4 4 0 0 1 4 4v15"></path><path d="M12 7v15"></path></svg>
                    </span>
                    <h5>2. Identidad Única del Producto</h5>
                </div>

                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label>Nombre Genérico (*)</label>
                        <InputText @bind-Value="productoDto.NombreGenerico" class="form-control" @oninput="() => CheckUnicidad()" />
                        <ValidationMessage For="@(() => productoDto.NombreGenerico)" />
                    </div>
                    <div class="col-md-4 mb-3">
                        <label>Marca (*)</label>
                        <InputText @bind-Value="productoDto.Marca" class="form-control" @oninput="() => CheckUnicidad()" />
                        <ValidationMessage For="@(() => productoDto.Marca)" />
                    </div>
                    <div class="col-md-4 mb-3">
                        <label>Presentación (*)</label>
                        <InputText @bind-Value="productoDto.Presentacion" class="form-control" @oninput="() => CheckUnicidad()" />
                        <ValidationMessage For="@(() => productoDto.Presentacion)" />
                    </div>
                </div>

                @if (unicidadError)
                {
                    <div class="alert alert-danger my-3">
                        ❌ **Error de Unicidad**: Ya existe un producto con esa combinación (Nombre Genérico, Marca, Presentación).
                    </div>
                }
            </div>

            <!-- BLOQUE 3: Clasificación, Precio y Códigos -->
            <div class="form-block">
                <div class="form-block-header">
                    <span class="icon-wizard">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path><polyline points="7 10 12 15 17 10"></polyline><line x1="12" x2="12" y1="15" y2="3"></line></svg>
                    </span>
                    <h5>3. Clasificación y Valores</h5>
                </div>

                <div class="row">
                    <!-- Fila 1 -->
                    

                    <div class="col-md-4 mb-3">
                        <label>Tarifa IVA (*)</label>
                        <InputSelect @bind-Value="productoDto.TarifaIvaId" class="form-select" disabled="@(!PermiteCambioIVA)">
                            <option value="0">-- Seleccione --</option>
                            @if (tarifasIva != null)
                            {
                                @foreach (var t in tarifasIva.Where(t => t.Porcentaje == 0 || t.Porcentaje == 15))
                                {
                                    <option value="@t.Id">@t.Porcentaje.ToString("0")% (Código: @t.CodigoSRI)</option>
                                }
                            }
                        </InputSelect>
                        <ValidationMessage For="@(() => productoDto.TarifaIvaId)" />
                    </div>

                    <div class="col-md-4 mb-3 d-flex flex-column justify-content-end">
                        <label class="mb-2">Es Perecible (Caduca)</label>
                        <div class="form-check form-switch">
                            <InputCheckbox @bind-Value="productoDto.EsPerecible" class="form-check-input" type="checkbox" role="switch" id="esPerecibleSwitch" />
                            <label class="form-check-label" for="esPerecibleSwitch">@productoDto.EsPerecible.ToString()</label>
                        </div>
                    </div>
                </div>

                <div class="row mt-3">
                    <!-- Fila 2 -->
                    <div class="col-md-6 mb-3">
                        <label>Código Principal</label>
                        <InputText @bind-Value="productoDto.CodigoPrincipal" class="form-control" />
                        <small class="text-muted">Dejar en blanco para autogenerar. Suele ser el código de barras.</small>
                        <ValidationMessage For="@(() => productoDto.CodigoPrincipal)" />
                    </div>
                </div>
            </div>


            <div class="text-end border-top pt-3 mt-4">
                <button type="submit" class="btn btn-success btn-lg" disabled="@(isSubmitting || unicidadError || selectedCategoriaId == 0)">
                    @if (isSubmitting)
                    {
                        <span>Guardando...</span>
                    }
                    else
                    {
                        <span>Guardar Producto y Continuar a Lotes</span>
                    }
                </button>
            </div>
        </EditForm>
    }
</div>

@code {
    [Parameter] public int Id { get; set; } = 0;
    // Nota: Es importante que PrecioUnitario esté en el DTO de creación para ser validado.
    private CreateProducto productoDto = new() { TipoProducto = "Bien", PrecioUnitario = 0m };
    private List<TarifaIva>? tarifasIva;
    private bool isLoading = true;
    private bool isSubmitting = false;
    private bool unicidadError = false;
    private int selectedCategoriaId = 0;
    private bool PermiteCambioIVA = true;
    private string requestMessage = string.Empty;
    private string requestClase = "alert-info";

    protected override async Task OnInitializedAsync()
    {
        await LoadTarifas();
    }

    private async Task LoadTarifas()
    {
        isLoading = true;
        try
        {
            tarifasIva = await Http.GetFromJsonAsync<List<TarifaIva>>("api/tarifasiva");

            // Inicializar el DTO con una categoría por defecto si no se ha seleccionado ninguna
            if (selectedCategoriaId == 0)
            {
                // Asume que 15% es el valor predeterminado si no se selecciona nada.
                var defaultCategoria = ReglasProducto.CategoriasBase.First(c => c.TarifaIvaIdPorDefecto == ReglasProducto.IVA_15_ID);
                SelectCategoria(defaultCategoria);
            }
        }
        catch (Exception ex)
        {
            MostrarMensaje($"Error al cargar datos iniciales: {ex.Message}", "alert-danger");
        }
        isLoading = false;
    }

    private void SelectCategoria(ReglasProducto.CategoriaSimulada categoria)
    {
        selectedCategoriaId = categoria.Id;

        // 1. Configuraciones Automáticas
        productoDto.TarifaIvaId = categoria.TarifaIvaIdPorDefecto;
        productoDto.EsPerecible = categoria.EsPereciblePorDefecto;

        // 2. Banderas de control
        PermiteCambioIVA = categoria.PermiteCambioIVA;

        // Re-chequeamos unicidad
        CheckUnicidad();
        StateHasChanged();
    }

    private void GoBack() => NavManager.NavigateTo("/productos");

    private async Task CheckUnicidad()
    {
        // Solo chequear si los campos clave están llenos
        if (string.IsNullOrWhiteSpace(productoDto.NombreGenerico) ||
        string.IsNullOrWhiteSpace(productoDto.Marca) ||
        string.IsNullOrWhiteSpace(productoDto.Presentacion))
        {
            unicidadError = false;
            return;
        }

        try
        {
            // Nota: Aquí se asume que el backend usa la descripción (Nombre/Marca/Presentacion) para la unicidad, y se pasa un excludedId=0 para creación.
            var url = $"api/productos/check-unicidad?nombre={productoDto.NombreGenerico}&marca={productoDto.Marca}&presentacion={productoDto.Presentacion}&excludedId=0";
            var existe = await Http.GetFromJsonAsync<bool>(url);
            unicidadError = existe;
        }
        catch (Exception ex)
        {
            // Manejo de errores de comunicación, no bloquea el formulario, solo muestra una advertencia.
            MostrarMensaje($"Error de validación de unicidad: {ex.Message}", "alert-warning");
        }
    }

    private async Task GuardarProducto()
    {
        if (unicidadError || selectedCategoriaId == 0) return;

        isSubmitting = true;
        requestMessage = string.Empty;

        try
        {
            HttpResponseMessage response;
            Producto? productoGuardado = null;

            // Se utiliza directamente productoDto en el submit, asegurando que todos los campos requeridos estén llenos.
            response = await Http.PostAsJsonAsync("api/productos", productoDto);

            if (response.IsSuccessStatusCode)
            {
                productoGuardado = await response.Content.ReadFromJsonAsync<Producto>();
                MostrarMensaje("✅ Producto guardado. Continuar a registro de lotes.", "alert-success");
                // Redirigir al detalle de lotes del producto recién creado
                NavManager.NavigateTo($"/productos/lotes/{productoGuardado!.Id}");
            }
            else
            {
                var errorBody = await response.Content.ReadAsStringAsync();
                MostrarMensaje($"❌ Error: {ExtraerMensajeError(errorBody)}", "alert-danger");
            }
        }
        catch (Exception ex)
        {
            MostrarMensaje($"Error en la solicitud: {ex.Message}", "alert-danger");
        }
        finally
        {
            isSubmitting = false;
        }
    }

    private string ExtraerMensajeError(string jsonResponse)
    {
        // ... (Lógica de extracción de error sin cambios) ...
        try
        {
            if (!jsonResponse.Trim().StartsWith("{"))
                return jsonResponse.Trim('"');

            using var doc = System.Text.Json.JsonDocument.Parse(jsonResponse);
            var root = doc.RootElement;

            if (root.TryGetProperty("errors", out var errors))
            {
                foreach (var prop in errors.EnumerateObject())
                {
                    if (prop.Value.ValueKind == System.Text.Json.JsonValueKind.Array)
                    {
                        return prop.Value[0].GetString() ?? "Datos inválidos.";
                    }
                }
            }
            if (root.TryGetProperty("message", out var message))
            {
                return message.GetString() ?? "Error en la solicitud.";
            }

            return "Verifique los datos ingresados.";
        }
        catch
        {
            return jsonResponse;
        }
    }

    private void MostrarMensaje(string texto, string clase)
    {
        requestMessage = texto;
        requestClase = clase;
        StateHasChanged();
    }
}