@page "/ver-nc/{FacturaId:int}"
@using SistemaFacturacionSRI.Domain.Entities
@inject HttpClient Http
@inject IJSRuntime JS

<PageTitle>Notas de Crédito</PageTitle>

<div class="container">
    <h3>📂 Notas de Crédito de la Factura #@FacturaId</h3>

    @if (isLoading)
    {
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Cargando...</span>
        </div>
    }
    else if (notasCredito == null || !notasCredito.Any())
    {
        <div class="alert alert-warning mt-3">No existen Notas de Crédito para esta factura.</div>
        <a href="facturas" class="btn btn-secondary mt-2">Volver</a>
    }
    else
    {
        <table class="table table-hover mt-3">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Fecha</th>
                    <th>Motivo</th>
                    <th>Total</th>
                    <th>Estado SRI</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var nc in notasCredito)
                {
                    <tr>
                        <td>@nc.Id</td>
                        <td>@nc.FechaEmision.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>@nc.Motivo</td>
                        <td>$@nc.Total.ToString("N2")</td>
                        <td>
                            <span class="badge @(nc.EstadoSRI == "AUTORIZADO" ? "bg-success" : "bg-danger")">
                                @nc.EstadoSRI
                            </span>
                        </td>
                        <td>
                            @if (nc.EstadoSRI == "AUTORIZADO")
                            {
                                <button class="btn btn-danger btn-sm" @onclick="() => DescargarPdf(nc.Id)">
                                    <span class="bi bi-file-earmark-pdf"></span> PDF
                                </button>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="mt-3">
            <a href="facturas" class="btn btn-outline-secondary">Volver al Listado</a>
        </div>
    }
</div>

@code {
    [Parameter] public int FacturaId { get; set; }
    private List<NotaCredito>? notasCredito;
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            notasCredito = await Http.GetFromJsonAsync<List<NotaCredito>>($"api/NotasCredito/PorFactura/{FacturaId}");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task DescargarPdf(int id)
    {
        try
        {
            var response = await Http.GetAsync($"api/NotasCredito/{id}/pdf");
            if (response.IsSuccessStatusCode)
            {
                var pdfBytes = await response.Content.ReadAsByteArrayAsync();
                var fileName = $"NC-{id}.pdf";

                // Función JS para descargar (debes tenerla en tu index.html o usar una librería)
                // Usaremos un método simple inyectado:
                await JS.InvokeVoidAsync("descargarArchivo", fileName, Convert.ToBase64String(pdfBytes), "application/pdf");
            }
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("alert", "Error al descargar PDF: " + ex.Message);
        }
    }
}