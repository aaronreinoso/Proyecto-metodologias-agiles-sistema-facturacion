@inherits LayoutComponentBase
@inject NavigationManager NavManager

@* Si estamos en /login, mostramos SOLO el contenido sin layout *@
@if (EsLoginPage)
{
    @Body
}
else
{
    <div class="page">

        @* Sidebar visible solo cuando NO es login *@
        <div class="sidebar">
            <NavMenu />
        </div>

        <main>
            <article class="content px-4">
                @Body
            </article>
        </main>

    </div>
}

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code {
    private bool EsLoginPage => NavManager.Uri.Contains("/login");
}
